{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <div class="pt-16 md:pt-20"></div>
    
    <div class="px-4 py-6 sm:px-6 lg:px-8 max-w-7xl mx-auto">
        <!-- Header -->
        <div class="bg-gradient-to-r from-pink-500 to-purple-600 rounded-lg shadow-sm overflow-hidden mb-8">
            <div class="p-6 text-white">
                <h1 class="text-3xl font-bold mb-2">üëã Bonjour {{ user.prenom }} !</h1>
                <p class="text-pink-100">Bienvenue sur votre profil personnel</p>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Profile Section -->
            <div class="lg:col-span-2 space-y-8">
                
                <!-- Profile Information -->
                <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h2 class="text-xl font-bold text-gray-900">üìù Mes Informations</h2>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="text-sm font-medium text-gray-600">Pr√©nom</label>
                                <p class="text-lg text-gray-900">{{ user.prenom }}</p>
                            </div>
                            <div>
                                <label class="text-sm font-medium text-gray-600">Nom</label>
                                <p class="text-lg text-gray-900">{{ user.nom }}</p>
                            </div>
                            <div>
                                <label class="text-sm font-medium text-gray-600">Email</label>
                                <p class="text-lg text-gray-900">{{ user.email }}</p>
                            </div>
                            <div>
                                <label class="text-sm font-medium text-gray-600">T√©l√©phone</label>
                                <p class="text-lg text-gray-900">{{ user.phone ?? 'Non renseign√©' }}</p>
                            </div>
                        </div>
                        
                        <div class="mt-6 pt-6 border-t border-gray-200">
                            <a href="{{ path('app_user_edit', {id: user.id}) }}" 
                               class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-pink-600 hover:bg-pink-700">
                                ‚úèÔ∏è Modifier mes informations
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Upcoming Appointments -->
                {% if rendezvous_stats.upcoming is not empty %}
                <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                    <div class="px-4 sm:px-6 py-4 border-b border-gray-200">
                        <h2 class="text-lg sm:text-xl font-bold text-gray-900">üìÖ Mes Prochains Rendez-vous</h2>
                    </div>
                    <div class="p-4 sm:p-6">
                        <div class="space-y-3">
                            {% for rdv in rendezvous_stats.upcoming %}
                                {% set current_time = "now"|date_modify("+1 hour")|date("U") %}
                                {% set start_time = rdv.creneau.startTime is defined ? rdv.creneau.startTime|date("H:i:s") : null %}
                                {% set appointment_time = rdv.day|date("Y-m-d") ~ ' ' ~ start_time %}
                                {% set appointment_time_unix = appointment_time|date("U") %}
                                {% set time_difference = appointment_time_unix - current_time %}
                                {% set within_48_hours = time_difference < (48 * 3600) %}
                                {% set appointment_passed = current_time > appointment_time_unix %}

                                <div class="border border-gray-200 rounded-lg hover:bg-gray-50">
                                    <div class="p-3 sm:p-4">
                                        <div class="flex items-start space-x-3">
                                            <div class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 bg-pink-100 rounded-lg flex items-center justify-center">
                                                <span class="text-pink-600 font-semibold text-base sm:text-lg">üìÖ</span>
                                            </div>
                                            <div class="flex-1 min-w-0">
                                                <h3 class="font-semibold text-gray-900 text-sm sm:text-base truncate">{{ rdv.prestation.title }}</h3>
                                                <p class="text-xs sm:text-sm text-gray-600 mt-1">
                                                    {{ rdv.day|date('d/m/Y') }} √† {{ rdv.creneau.startTime|date('H:i') }}
                                                </p>
                                                {% if not rdv.status in ["Annul√©", "Paiement en attente", "√âchec du paiement"] and not appointment_passed %}
                                                    <p class="text-xs text-gray-400 mt-1">
                                                        {% set hours_left = (time_difference / 3600)|round %}
                                                        {% if hours_left > 48 %}
                                                            {{ (hours_left / 24)|round }} jours restants
                                                        {% else %}
                                                            {{ hours_left }}h restantes
                                                        {% endif %}
                                                    </p>
                                                {% endif %}
                                            </div>
                                        </div>

                                        <div class="mt-3 flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-3">
                                            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium
                                                {% if rdv.status == 'Rendez-vous confirm√©' %}bg-green-100 text-green-800{% else %}bg-blue-100 text-blue-800{% endif %}">
                                                {{ rdv.status }}
                                            </span>

                                            {% if rdv.status == "Annul√©" %}
                                                <span class="text-xs text-gray-400">Annul√©</span>
                                            {% elseif rdv.status in ["Paiement en attente", "√âchec du paiement"] %}
                                                <span class="text-xs text-gray-400">En attente</span>
                                            {% elseif appointment_passed %}
                                                <span class="text-xs text-gray-400">Pass√©</span>
                                            {% elseif within_48_hours %}
                                                <a href="{{ path('app_rendezvous_cancel', {'id': rdv.id}) }}"
                                                   class="inline-flex items-center justify-center px-3 py-1.5 text-xs font-medium text-red-700 bg-red-100 rounded-lg hover:bg-red-200">
                                                    Annuler
                                                </a>
                                            {% else %}
                                                <div class="flex flex-col sm:flex-row gap-2">
                                                    <a href="{{ path('app_rendezvous_edit', {'id': rdv.id}) }}"
                                                       class="inline-flex items-center justify-center px-3 py-1.5 text-xs font-medium text-blue-700 bg-blue-100 rounded-lg hover:bg-blue-200">
                                                        Reporter
                                                    </a>
                                                    <a href="{{ path('app_rendezvous_cancel', {'id': rdv.id}) }}"
                                                       class="inline-flex items-center justify-center px-3 py-1.5 text-xs font-medium text-red-700 bg-red-100 rounded-lg hover:bg-red-200">
                                                        Annuler
                                                    </a>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        <div class="mt-4 sm:mt-6 pt-4 border-t border-gray-200 flex flex-col gap-2.5">
                            <a href="{{ path('app_new_rendezvous') }}"
                               class="inline-flex items-center justify-center px-4 py-2.5 border border-transparent text-sm font-medium rounded-md text-white bg-pink-600 hover:bg-pink-700">
                                ‚ûï Nouveau rendez-vous
                            </a>
                            <a href="{{ path('app_profile_rendezvous') }}"
                               class="inline-flex items-center justify-center px-4 py-2.5 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                üìã Tous mes rendez-vous
                            </a>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>

            <!-- Sidebar -->
            <div class="space-y-8">
                
                <!-- Learning Space Access -->
                <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-lg shadow-sm overflow-hidden border border-purple-200">
                    <div class="p-6">
                        <div class="text-center">
                            <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-r from-pink-500 to-purple-600 rounded-full flex items-center justify-center">
                                <span class="text-white text-2xl">üéì</span>
                            </div>
                            <h3 class="text-lg font-bold text-gray-900 mb-2">Mon Espace d'Apprentissage</h3>
                            <p class="text-sm text-gray-600 mb-6">Acc√©dez √† vos formations, suivez votre progression et obtenez vos certificats</p>
                            
                            <!-- Formation Stats -->
                            <div class="grid grid-cols-2 gap-4 mb-6">
                                <div class="text-center p-3 bg-white rounded-lg border border-gray-200">
                                    <p class="text-2xl font-bold text-blue-600">{{ formation_stats.active }}</p>
                                    <p class="text-xs text-gray-600">En cours</p>
                                </div>
                                <div class="text-center p-3 bg-white rounded-lg border border-gray-200">
                                    <p class="text-2xl font-bold text-green-600">{{ formation_stats.completed }}</p>
                                    <p class="text-xs text-gray-600">Termin√©es</p>
                                </div>
                            </div>
                            
                            <a href="{{ path('app_user_learning_dashboard') }}" 
                               class="w-full inline-flex items-center justify-center px-4 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gradient-to-r from-pink-500 to-purple-600 hover:from-pink-600 hover:to-purple-700">
                                üöÄ Acc√©der √† mes formations
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-lg font-bold text-gray-900">‚ö° Actions Rapides</h3>
                    </div>
                    <div class="p-6 space-y-3">
                        <a href="{{ path('app_formation_index') }}" 
                           class="w-full flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-700 hover:bg-gray-100">
                            <span class="mr-3">üéì</span>
                            Catalogue des formations
                        </a>
                        
                        {% if formation_stats.active > 0 %}
                        <a href="{{ path('app_user_learning_formations') }}" 
                           class="w-full flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-700 hover:bg-gray-100">
                            <span class="mr-3">üìö</span>
                            Mes formations en cours
                        </a>
                        {% endif %}
                        
                        <a href="{{ path('app_new_rendezvous') }}" 
                           class="w-full flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-700 hover:bg-gray-100">
                            <span class="mr-3">üìÖ</span>
                            Prendre rendez-vous
                        </a>
                        
                        <a href="{{ path('app_user_edit', {id: user.id}) }}" 
                           class="w-full flex items-center px-3 py-2 text-sm font-medium rounded-md text-gray-700 hover:bg-gray-100">
                            <span class="mr-3">‚öôÔ∏è</span>
                            Param√®tres du compte
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}