{% extends 'base.html.twig' %}

{% block title %}Prestation index{% endblock %}

{% block body %}



<section class="bg-gray-100 dark:bg-gray-900 py-10 px-12">
<h1 class="text-2xl mb-2 text-2xl font-bold tracking-tight text-red-500 mt-10">Nos prestations</h1>
    <!-- Card Grid -->
    <div class="grid grid-flow-row gap-8 text-neutral-600 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        {% for prestation in prestations %}
            <!-- Card Item -->
            <div class="my-8 rounded shadow-lg shadow-gray-200 duration-300 hover:-translate-y-1">
                <!-- Clickable Area -->
                <a _href="link" class="cursor-pointer">
                    <figure>
                        <!-- Image -->
                        <img src="{{ asset('assets/' ~ vich_uploader_asset(prestation, 'image')) }}" class="rounded-t h-72 w-full object-cover" />

                        <figcaption class="p-4">
                            <!-- Title -->
                            <p class="text-lg mb-4 font-bold leading-relaxed text-gray-800 dark:text-gray-300">
                                {{ prestation.title }}
                                <!-- Post Title -->
                            </p>

                            <!-- Description -->
                            <p class="leading-5 text-gray-500 dark:text-gray-400">
                                Durée: {{ prestation.duration }} minutes
                                <!-- Post Description -->
                            </p>

                            <!-- Description -->
                            <small class="leading-5 text-gray-500 dark:text-gray-400">
                                {{ prestation.price }} FCFA
                                <!-- Post Description -->
                            </small>
                            <p>
                            <!--button data-modal-target="default-modal" data-modal-toggle="default-modal" class="block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
                            Voir plus
                            </button-->
                            </p>
                            <!-- Main modal -->
                        </figcaption>
                    </figure>
                </a>
                
            </div>
            {% else %}
            <p class="font-normal text-gray-700 ">Aucune prestation</p>
            {% endfor %}
    </div>
    
</section>
    

    <!--a href="{{ path('app_prestation_new') }}">Créer une nouvelle prestation</a-->
</div>
{% endblock %}
