{% extends 'base.html.twig' %}

{% block title %}Nos Prestations{% endblock %}

{% block body %}



<section class="bg-white py-10 px-12">
<div class="relative overflow-hidden w-full min-h-[90px] bg-white rounded-lg"></div>
<h1 class="text-2xl mb-2 text-2xl font-bold tracking-tight text-pink-700 mt-10">Nos prestations</h1>
    <!-- Card Grid -->
    <div class="grid grid-flow-row gap-8 text-neutral-600 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        {% for prestation in prestations %}
            <!-- Card Item -->
            <div class="my-8 rounded shadow-lg shadow-gray-200 duration-300 hover:-translate-y-1">
                <!-- Clickable Area -->
                    <figure>
                        <!-- Image -->
                        <img src="{{ asset('assets/' ~ vich_uploader_asset(prestation, 'image')) }}" class="rounded-t h-72 w-full object-cover" />

                        <figcaption class="p-4">
                            <!-- Title -->
                            <p class="text-lg mb-4 font-bold leading-relaxed text-gray-800">
                                {{ prestation.title }}
                                <!-- Post Title -->
                            </p>

                            <!-- Description -->
                            <p class="leading-5 text-gray-500">
                                Durée: {{ prestation.duration }} minutes
                                <!-- Post Description -->
                            </p>

                            <!-- Description -->
                            <small class="leading-5 text-gray-500">
                                {{ prestation.price }} FCFA
                                <!-- Post Description -->
                            </small>
                            <p class="mt-5">
                            <button data-modal-target="modal{{ prestation.id }}" data-modal-toggle="modal{{ prestation.id }}" class="cursor-pointer block text-white bg-pink-700 hover:bg-pink-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" type="button">
                                Voir plus
                            </button>
                            </p>
                            <!-- Main modal -->
                        </figcaption>
                    </figure>
            </div>
            <!-- Main modal -->
        <div id="modal{{ prestation.id }}" data-modal-backdrop="static" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
            <div class="relative p-4 w-full max-w-2xl max-h-full">
                <!-- Modal content -->
                <div class="relative bg-white rounded-lg shadow">
                    <!-- Modal header -->
                    <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                        <h3 class="text-xl font-semibold text-gray-900">
                            {{ prestation.title }}
                        </h3>
                        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="modal{{ prestation.id }}">
                            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                            </svg>
                            <span class="sr-only">Fermer</span>
                        </button>
                    </div>
                    <!-- Modal body -->
                    <div class="p-4 md:p-5 space-y-4">
                        <p class="text-base leading-relaxed text-gray-500">
                            {{ prestation.description }}
                        </p>
                         <p class="text-base leading-relaxed text-gray-500">
                            <span class="font-bold">Inclus dans la prestation:</span><br>
                            {{ prestation.inclus }}
                        </p>
                        <p class="text-base leading-relaxed text-gray-500">
                            <span class="font-bold">Durée:</span> {{ prestation.duration }} minutes
                        </p>
                        <p class="text-base leading-relaxed text-gray-500">
                           <span class="font-bold">Prix:</span> {{ prestation.price }} FCFA
                        </p>
                    </div>
                    <!-- Modal footer -->
                    <div class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b ">
                        <a href="{{ path('app_calendar') }}">
                        <button data-modal-hide="modal{{ prestation.id }}" type="button" class="text-white bg-pink-700 hover:bg-pink-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Prendre Rendez-vous</button>
                        </a>
                        <button data-modal-hide="modal{{ prestation.id }}" type="button" class="ms-3 text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10">Nous contacter</button>
                    </div>
                </div>
            </div>
        </div>
            {% else %}
            <p class="font-normal text-gray-700 ">Aucune prestation</p>
            {% endfor %}
    </div>
    
</section>
    

    <!--a href="{{ path('app_prestation_new') }}">Créer une nouvelle prestation</a-->
</div>
{% endblock %}
