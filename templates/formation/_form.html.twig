<div class="max-w-4xl">
    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        
        <!-- Informations de base -->
        <div class="bg-gray-50 rounded-lg p-6">
            <div class="mb-4">
                <h3 class="text-lg font-medium text-gray-900 flex items-center">
                    üìù Informations de base
                </h3>
                <p class="text-sm text-gray-600 mt-1">Nom, description et prix</p>
            </div>
            <div class="space-y-4">
                <div>
                    {{ form_label(form.Nom, 'Nom de la formation', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.Nom, {'attr': {'class': 'bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-pink-500 focus:border-pink-500 block w-full p-3'}}) }}
                    {% if form_errors(form.Nom) %}
                        <div class="text-red-600 text-sm mt-1">{{ form_errors(form.Nom) }}</div>
                    {% endif %}
                </div>
                
                <div>
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-pink-500 focus:border-pink-500 block w-full p-3 min-h-[100px]', 'rows': '4'}}) }}
                    {% if form_errors(form.description) %}
                        <div class="text-red-600 text-sm mt-1">{{ form_errors(form.description) }}</div>
                    {% endif %}
                </div>
                
                <div>
                    {{ form_label(form.Cout, 'Prix (FCFA)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    <div class="relative">
                        {{ form_widget(form.Cout, {'attr': {'class': 'bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-pink-500 focus:border-pink-500 block w-full p-3 pr-12'}}) }}
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                            <span class="text-gray-500 text-sm">FCFA</span>
                        </div>
                    </div>
                    {% if form_errors(form.Cout) %}
                        <div class="text-red-600 text-sm mt-1">{{ form_errors(form.Cout) }}</div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Image de la formation -->
        <div class="bg-gray-50 rounded-lg p-6">
            <div class="mb-4">
                <h3 class="text-lg font-medium text-gray-900 flex items-center">
                    üì∑ Image de la formation
                </h3>
                <p class="text-sm text-gray-600 mt-1">Photo de pr√©sentation</p>
            </div>
            <div>
                {{ form_widget(form.image, {'attr': {'class': 'block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-white focus:outline-none file:mr-4 file:py-2 file:px-4 file:rounded-l-lg file:border-0 file:text-sm file:font-medium file:bg-pink-50 file:text-pink-700 hover:file:bg-pink-100'}}) }}
                {% if form_errors(form.image) %}
                    <div class="text-red-600 text-sm mt-1">{{ form_errors(form.image) }}</div>
                {% endif %}
            </div>
        </div>

        <!-- Pr√©requis -->
        <div class="bg-gray-50 rounded-lg p-6">
            <div class="mb-4">
                <h3 class="text-lg font-medium text-gray-900 flex items-center">
                    üìö Pr√©requis
                </h3>
                <p class="text-sm text-gray-600 mt-1">Conditions requises pour suivre la formation</p>
            </div>
            <div>
                {{ form_widget(form.Prerequis, {'attr': {'class': 'bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-pink-500 focus:border-pink-500 block w-full p-3 min-h-[120px]', 'rows': '5'}}) }}
                {% if form_errors(form.Prerequis) %}
                    <div class="text-red-600 text-sm mt-1">{{ form_errors(form.Prerequis) }}</div>
                {% endif %}
            </div>
        </div>

        <!-- Objectifs -->
        <div class="bg-gray-50 rounded-lg p-6">
            <div class="mb-4">
                <h3 class="text-lg font-medium text-gray-900 flex items-center">
                    üéØ Objectifs p√©dagogiques
                </h3>
                <p class="text-sm text-gray-600 mt-1">Ce que les participants vont apprendre</p>
            </div>
            <div>
                {{ form_widget(form.Objectif, {'attr': {'class': 'bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-pink-500 focus:border-pink-500 block w-full p-3 min-h-[120px]', 'rows': '5'}}) }}
                {% if form_errors(form.Objectif) %}
                    <div class="text-red-600 text-sm mt-1">{{ form_errors(form.Objectif) }}</div>
                {% endif %}
            </div>
        </div>

        <!-- Programme de formation -->
        <div class="bg-gray-50 rounded-lg p-6 lg:col-span-2">
            <div class="mb-4">
                <h3 class="text-lg font-medium text-gray-900 flex items-center">
                    üìã Programme de formation
                </h3>
                <p class="text-sm text-gray-600 mt-1">Contenu d√©taill√© et d√©roulement de la formation</p>
            </div>
            <div>
                {{ form_widget(form.Programme, {'attr': {'class': 'bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-pink-500 focus:border-pink-500 block w-full p-3 min-h-[200px]', 'rows': '8'}}) }}
                {% if form_errors(form.Programme) %}
                    <div class="text-red-600 text-sm mt-1">{{ form_errors(form.Programme) }}</div>
                {% endif %}
            </div>
        </div>

        <!-- Suivi et √©valuation -->
        <div class="bg-gray-50 rounded-lg p-6 lg:col-span-2">
            <div class="mb-4">
                <h3 class="text-lg font-medium text-gray-900 flex items-center">
                    üìä Suivi et √©valuation
                </h3>
                <p class="text-sm text-gray-600 mt-1">Modalit√©s d'√©valuation et de suivi des participants</p>
            </div>
            <div>
                {{ form_widget(form.Suivi, {'attr': {'class': 'bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-pink-500 focus:border-pink-500 block w-full p-3 min-h-[150px]', 'rows': '6'}}) }}
                {% if form_errors(form.Suivi) %}
                    <div class="text-red-600 text-sm mt-1">{{ form_errors(form.Suivi) }}</div>
                {% endif %}
            </div>
        </div>

    </div>

    <!-- Submit Button -->
    <div class="flex justify-center mt-8">
        <button type="submit" class="bg-pink-600 hover:bg-pink-700 text-white font-medium py-3 px-8 rounded-lg text-lg transition-colors duration-200">
            üíæ {{ button_label|default('Enregistrer') }}
        </button>
    </div>

    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
</div>