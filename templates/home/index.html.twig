<!-- Script pour initialiser les carrousels -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Fonction pour initialiser un carrousel Flowbite
    function initializeCarousel(carouselId) {
        const carousel = document.getElementById(carouselId);
        if (!carousel) return;

        const items = carousel.querySelectorAll('[data-carousel-item]');
        if (items.length === 0) return;

        // Afficher le premier √©l√©ment
        items[0].classList.remove('hidden');
        
        // Initialiser Flowbite si disponible
        if (typeof Carousel !== 'undefined') {
            const indicators = [];
            const indicatorElements = carousel.querySelectorAll('[data-carousel-slide-to]');
            indicatorElements.forEach((indicator, index) => {
                indicators.push({
                    position: index,
                    el: indicator
                });
            });

            new Carousel(carousel, items, {
                defaultPosition: 0,
                indicators: {
                    activeClasses: 'bg-white',
                    inactiveClasses: 'bg-white/50 hover:bg-white',
                    items: indicators
                },
                interval: 5000,
                pause: 'hover'
            });
        }
    }

    // Initialiser tous les carrousels
    const carouselIds = ['default-carousel', 'local-carousel', 'prestations-carousel', 'academie-carousel'];
    carouselIds.forEach(initializeCarousel);
});
</script>
