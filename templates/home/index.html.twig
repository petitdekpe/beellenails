{% extends 'base.html.twig' %}

{% block title %}BeElle Nails{% endblock %}

{% block body %}
<!-- Slider -->
<div class="relative overflow-hidden w-full min-h-[95px] bg-white rounded-lg"></div>


<div id="default-carousel" class="relative w-full" data-carousel="slide">
    <!-- Carousel wrapper -->
    <div class="relative h-56 overflow-hidden rounded-lg md:h-96">
        {% if homeImages.hero_slide is not empty %}
            {% for image in homeImages.hero_slide %}
                {% if image.imageName %}
                    <div class="hidden duration-700 ease-in-out z-0" data-carousel-item>
                        <img src="{{ asset(vich_uploader_asset(image, 'image')) }}" class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="{{ image.title }}">
                    </div>
                {% endif %}
            {% endfor %}
        {% else %}
            <!-- Fallback to static images -->
            <div class="hidden duration-700 ease-in-out z-0" data-carousel-item>
                <img src="assets/slide1.webp" class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="...">
            </div>
            <div class="hidden duration-700 ease-in-out z-0" data-carousel-item>
                <img src="assets/slide2.webp" class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="...">
            </div>
            <div class="hidden duration-700 ease-in-out z-0" data-carousel-item>
                <img src="assets/slide3.webp" class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="...">
            </div>
        {% endif %}
    </div>
    <!-- Slider indicators -->
    <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
        {% if homeImages.hero_slide is not empty %}
            {% set validSlides = homeImages.hero_slide|filter(image => image.imageName) %}
            {% set slideCount = validSlides|length > 0 ? validSlides|length : 3 %}
        {% else %}
            {% set slideCount = 3 %}
        {% endif %}
        {% for i in 0..slideCount-1 %}
            <button type="button" class="w-3 h-3 rounded-full" aria-current="{{ i == 0 ? 'true' : 'false' }}" aria-label="Slide {{ i + 1 }}" data-carousel-slide-to="{{ i }}"></button>
        {% endfor %}
    </div>
    <!-- Slider controls -->
    <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 group-focus:outline-none">
            <svg class="w-4 h-4 text-white  rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
            </svg>
            <span class="sr-only">Précédent</span>
        </span>
    </button>
    <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 group-focus:ring-4 group-focus:ring-white group-focus:outline-none">
            <svg class="w-4 h-4 text-white rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
