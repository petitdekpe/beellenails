{% block javascripts %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const datePicker = document.getElementById('datepicker');
    const slotsDropdown = document.getElementById('rendezvous_modify_creneau');
    const datePreview = document.getElementById('date-preview');
    const selectedDateDisplay = document.getElementById('selected-date-display');
    const availabilityMessage = document.getElementById('availability-message');
    
    // Initialiser Flatpickr
    const picker = flatpickr("#datepicker", {
        defaultDate: null,
        enableTime: false,
        dateFormat: "Y-m-d",
        altInput: true,
        altFormat: "l j F Y",
        locale: "fr",
        minDate: "today",
        disable: [
            function(date) {
                return (date.getDay() === 1); // Lundi
            },
            function(date) {
                return (date.getDay() === 0); // Dimanche
            }
        ],
        theme: "light",
        onChange: function(selectedDates, dateStr, instance) {
            if (selectedDates.length > 0) {
                const selectedDate = selectedDates[0];
                selectedDateDisplay.textContent = selectedDate.toLocaleDateString('fr-FR', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
                datePreview.classList.remove('hidden');
                
                // Charger les crÃ©neaux disponibles
                loadAvailableSlots(dateStr);
            } else {
                datePreview.classList.add('hidden');
                resetSlotsDropdown();
            }
        }
    });

    function loadAvailableSlots(selectedDate) {
        availabilityMessage.classList.remove('hidden');
        availabilityMessage.innerHTML = `
            <div class="bg-yellow-50 rounded-lg p-3 border border-yellow-200">
                <p class="text-sm text-yellow-800">
                    <span class="font-medium">Chargement des crÃ©neaux disponibles...</span>
                </p>
            </div>
        `;

        const xhr = new XMLHttpRequest();
        xhr.open('POST', '/get-available-slots', true);
        xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
        
        xhr.onreadystatechange = function() {
            if (xhr.readyState === XMLHttpRequest.DONE) {
                if (xhr.status === 200) {
                    const slots = JSON.parse(xhr.responseText);
                    updateSlotsDropdown(slots);
                    
                    if (slots.length > 0) {
                        availabilityMessage.innerHTML = `
                            <div class="bg-green-50 rounded-lg p-3 border border-green-200">
                                <p class="text-sm text-green-800">
                                    <span class="font-medium">${slots.length} crÃ©neau${slots.length > 1 ? 'x' : ''} disponible${slots.length > 1 ? 's' : ''}</span>
                                </p>
                            </div>
                        `;
                    } else {
                        availabilityMessage.innerHTML = `
                            <div class="bg-red-50 rounded-lg p-3 border border-red-200">
                                <p class="text-sm text-red-800">
                                    <span class="font-medium">Aucun crÃ©neau disponible pour cette date</span>
                                </p>
                            </div>
                        `;
                    }
                } else {
                    availabilityMessage.innerHTML = `
                        <div class="bg-red-50 rounded-lg p-3 border border-red-200">
                            <p class="text-sm text-red-800">
                                <span class="font-medium">Erreur lors du chargement des crÃ©neaux</span>
                            </p>
                        </div>
                    `;
                }
            }
        };
        
        xhr.send('date=' + selectedDate);
    }

    function updateSlotsDropdown(slots) {
        slotsDropdown.innerHTML = '<option value="">SÃ©lectionnez un crÃ©neau</option>';
        
        slots.forEach(function(slot) {
            const option = document.createElement('option');
            option.value = slot.id;
            option.text = slot.libelle;
            slotsDropdown.appendChild(option);
        });
        
        slotsDropdown.disabled = slots.length === 0;
    }

    function resetSlotsDropdown() {
        slotsDropdown.innerHTML = '<option value="">SÃ©lectionnez d\'abord une date</option>';
        slotsDropdown.disabled = true;
        availabilityMessage.classList.add('hidden');
    }

    // Ã‰tat initial
    resetSlotsDropdown();

    // Validation du formulaire avant soumission
    const form = document.querySelector('form');
    const submitBtn = document.getElementById('submit-btn');

    if (form && submitBtn) {
        form.addEventListener('submit', function(e) {
            const datePicker = document.getElementById('datepicker');
            const slotsDropdown = document.getElementById('rendezvous_modify_creneau');
            
            // VÃ©rifier si une date est sÃ©lectionnÃ©e
            if (!datePicker.value) {
                e.preventDefault();
                showValidationError('Veuillez sÃ©lectionner une nouvelle date pour le rendez-vous.');
                return false;
            }
            
            // VÃ©rifier si un crÃ©neau est sÃ©lectionnÃ©
            if (!slotsDropdown.value) {
                e.preventDefault();
                showValidationError('Veuillez sÃ©lectionner un crÃ©neau horaire pour le rendez-vous.');
                return false;
            }
            
            return true;
        });
    }

    function showValidationError(message) {
        // Supprimer les messages d'erreur existants
        const existingError = document.getElementById('validation-error');
        if (existingError) {
            existingError.remove();
        }

        // CrÃ©er et afficher le message d'erreur
        const errorDiv = document.createElement('div');
        errorDiv.id = 'validation-error';
        errorDiv.className = 'mb-4 p-4 text-sm rounded-lg text-red-800 bg-red-50 border border-red-200';
        errorDiv.innerHTML = `
            <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
                ${message}
            </div>
        `;
        
        // InsÃ©rer le message d'erreur au dÃ©but du formulaire
        const formContainer = document.querySelector('.bg-white.rounded-lg.shadow .px-6.py-6');
        if (formContainer) {
            formContainer.insertBefore(errorDiv, formContainer.firstChild);
        }
        
        // Faire dÃ©filer vers l'erreur
        errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
});
</script>

