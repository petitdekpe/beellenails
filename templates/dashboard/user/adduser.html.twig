{% extends 'dashboard.html.twig' %}

{% block title %}Dashboard - Nouveau Client{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto">
        
        <!-- Main Content -->
        <div 
            <div class="px-4 py-6 sm:px-6 lg:px-8">
                <!-- Header -->
                <div class="mb-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <h1 class="text-2xl font-bold text-gray-900">üë§ Nouveau Client</h1>
                            <p class="text-sm text-gray-600">Cr√©ez un compte client en remplissant les informations ci-dessous</p>
                        </div>
                        <a href="{{ path('app_dashboard_user') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0L2.586 9l5.707-5.707a1 1 0 011.414 1.414L5.414 9l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
                            </svg>
                            Retour aux clients
                        </a>
                    </div>
                </div>

                <!-- Formulaire -->
                <div class="bg-white rounded-lg shadow">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h2 class="text-lg font-medium text-gray-900">Informations du client</h2>
                        <p class="text-sm text-gray-600">Remplissez les champs pour cr√©er le compte client</p>
                    </div>
                    
                    <div class="px-6 py-6">
                        {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                        
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                            <!-- Colonne gauche -->
                            <div class="space-y-6">
                                <!-- Nom -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        <span class="flex items-center">
                                            <svg class="w-4 h-4 mr-2 text-pink-600" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                                            </svg>
                                            Nom *
                                        </span>
                                    </label>
                                    {{ form_widget(registrationForm.Nom, {'attr': {'class': 'block w-full rounded-lg border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm', 'placeholder': 'Nom de famille'}}) }}
                                    {{ form_errors(registrationForm.Nom) }}
                                </div>

                                <!-- Pr√©nom -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        <span class="flex items-center">
                                            <svg class="w-4 h-4 mr-2 text-pink-600" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                                            </svg>
                                            Pr√©nom *
                                        </span>
                                    </label>
                                    {{ form_widget(registrationForm.Prenom, {'attr': {'class': 'block w-full rounded-lg border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm', 'placeholder': 'Pr√©nom'}}) }}
                                    {{ form_errors(registrationForm.Prenom) }}
                                </div>
                            </div>

                            <!-- Colonne droite -->
                            <div class="space-y-6">
                                <!-- Email -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        <span class="flex items-center">
                                            <svg class="w-4 h-4 mr-2 text-pink-600" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                                            </svg>
                                            Adresse email *
                                        </span>
                                    </label>
                                    {{ form_widget(registrationForm.email, {'attr': {'class': 'block w-full rounded-lg border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm', 'placeholder': 'exemple@email.com'}}) }}
                                    {{ form_errors(registrationForm.email) }}
                                </div>

                                <!-- T√©l√©phone -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        <span class="flex items-center">
                                            <svg class="w-4 h-4 mr-2 text-pink-600" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                                            </svg>
                                            Num√©ro de t√©l√©phone *
                                        </span>
                                    </label>
                                    {{ form_widget(registrationForm.Phone, {'attr': {'class': 'block w-full rounded-lg border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm', 'placeholder': '22997853512'}}) }}
                                    {{ form_errors(registrationForm.Phone) }}
                                </div>
                            </div>
                        </div>

                        <!-- Conditions d'utilisation -->
                        <div class="bg-gray-50 rounded-lg p-4">
                            <div class="flex items-start">
                                <div class="flex items-center h-5">
                                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'w-4 h-4 text-pink-600 bg-gray-100 border-gray-300 rounded focus:ring-pink-500 focus:ring-2'}}) }}
                                </div>
                                <div class="ml-3 text-sm">
                                    {{ form_label(registrationForm.agreeTerms, null, {'attr': {'class': 'font-medium text-gray-700'}}) }}
                                    {{ form_errors(registrationForm.agreeTerms) }}
                                </div>
                            </div>
                        </div>

                        <!-- Informations importantes -->
                        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                                <div class="flex-shrink-0">
                                    <svg class="w-5 h-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <h3 class="text-sm font-medium text-blue-800">Information importante</h3>
                                    <div class="mt-2 text-sm text-blue-700">
                                        <p>‚Ä¢ Un mot de passe temporaire sera g√©n√©r√© automatiquement</p>
                                        <p>‚Ä¢ Un email de bienvenue sera envoy√© au client avec ses identifiants</p>
                                        <p>‚Ä¢ Le client pourra modifier son mot de passe lors de sa premi√®re connexion</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="pt-6 border-t border-gray-200">
                            <div class="flex items-center justify-end space-x-3">
                                <a href="{{ path('app_dashboard_user') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                                    Annuler
                                </a>
                                <button type="submit" class="inline-flex items-center px-6 py-2 bg-pink-600 hover:bg-pink-700 text-white font-medium rounded-lg text-sm transition-colors">
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
                                    </svg>
                                    Cr√©er le client
                                </button>
                            </div>
                        </div>

                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
