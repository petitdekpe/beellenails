<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Modifier un utilisateur{% endblock %}</title>

    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <link rel="manifest" href="/favicon/site.webmanifest">
    <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>


    <script src="https://cdn.tailwindcss.com"></script>
    
    <style>
    /* Pour les libellés des mois */
    .fc-toolbar-title, .fc-col-header-cell-cushion {
        text-transform: capitalize;
    }
    </style>

</head>

{% block body %}

<div class="max-w-xl mx-8">
    {{ form_start(form, {'attr': {'id': 'myForm'}}) }}
    <ol class="relative border-s border-gray-200">
        <li class="mb-6">
            <h3 class="mb-1 text-lg font-semibold text-gray-900">Modifier un utilisateur</h3>
        </li>
        <li class="mb-6">
            <label for="email" class="block mb-1 text-sm font-semibold text-gray-900">Email</label>
            <input type="email" id="email" name="email" value="{{ form.vars.value.email }}" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5">
        </li>
        <li class="mb-6">
            <label for="nom" class="block mb-1 text-sm font-semibold text-gray-900">Nom</label>
            <input type="text" id="nom" name="nom" value="{{ form.vars.value.nom }}" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5">
        </li>
        <li class="mb-6">
            <label for="prenom" class="block mb-1 text-sm font-semibold text-gray-900">Prénom</label>
            <input type="text" id="prenom" name="prenom" value="{{ form.vars.value.prenom }}" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5">
        </li>
        <li class="mb-6">
            <label for="phone" class="block mb-1 text-sm font-semibold text-gray-900">Téléphone</label>
            <input type="text" id="phone" name="phone" value="{{ form.vars.value.phone }}" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5">
        </li>
        <li class="mb-6">
            <label for="birthday" class="block mb-1 text-sm font-semibold text-gray-900">Date de naissance</label>
            <input type="date" id="birthday" name="birthday" value="{{ form.vars.value.birthday|date('Y-m-d') }}" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5">
        </li>
        <li class="mb-6">
            <label for="genre" class="block mb-1 text-sm font-semibold text-gray-900">Genre</label>
            <select id="genre" name="genre" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5">
                <option value="Homme" {% if form.vars.value.genre == 'Homme' %} selected {% endif %}>Homme</option>
                <option value="Femme" {% if form.vars.value.genre == 'Femme' %} selected {% endif %}>Femme</option>
                <option value="Autre" {% if form.vars.value.genre == 'Autre' %} selected {% endif %}>Autre</option>
            </select>
        </li>
    </ol>

    <button type="submit" class="btn btn-primary mt-5 text-white bg-pink-700 hover:bg-pink-500 focus:ring-4 focus:outline-none font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Enregistrer</button>
    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
</div>


{% endblock %}
