{% extends 'dashboard.html.twig' %}

{% block title %}Dashboard - Envoi d'emails{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto">
        
        <!-- Main Content -->
        <div 
            <div class="px-4 py-6 sm:px-6 lg:px-8">
                <!-- Header -->
                <div class="mb-6">
                    <h1 class="text-2xl font-bold text-gray-900">üìß Envoi d'emails aux clients</h1>
                    <p class="text-sm text-gray-600">{{ total_clients }} clients enregistr√©s</p>
                </div>


                <!-- Messages flash -->
                {% for message in app.flashes('success') %}
                    <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded relative">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative">
                        {{ message }}
                    </div>
                {% endfor %}

                <!-- Formulaire d'envoi d'email -->
                <div class="bg-white rounded-lg shadow">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h2 class="text-lg font-medium text-gray-900">Composer un email</h2>
                    </div>
                    <div class="px-6 py-6">
                        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        
                        <!-- Objet -->
                        <div>
                            {{ form_label(form.subject, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.subject) }}
                            {{ form_errors(form.subject) }}
                        </div>

                        <!-- Message -->
                        <div>
                            {{ form_label(form.message, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.message) }}
                            {{ form_errors(form.message) }}
                            <div class="mt-2 p-3 bg-blue-50 rounded-lg border border-blue-200">
                                <p class="text-xs font-medium text-blue-800 mb-2">üí° Balises de personnalisation disponibles :</p>
                                <div class="grid grid-cols-2 gap-2 text-xs text-blue-700">
                                    <div><code class="bg-white px-1 py-0.5 rounded">{{'{{'}}prenom{{'}}'}}</code> ‚Üí Pr√©nom du client</div>
                                    <div><code class="bg-white px-1 py-0.5 rounded">{{'{{'}}nom{{'}}'}}</code> ‚Üí Nom du client</div>
                                    <div><code class="bg-white px-1 py-0.5 rounded">{{'{{'}}nom_complet{{'}}'}}</code> ‚Üí Nom complet</div>
                                    <div><code class="bg-white px-1 py-0.5 rounded">{{'{{'}}email{{'}}'}}</code> ‚Üí Email du client</div>
                                    <div><code class="bg-white px-1 py-0.5 rounded">{{'{{'}}telephone{{'}}'}}</code> ‚Üí T√©l√©phone</div>
                                    <div><code class="bg-white px-1 py-0.5 rounded">{{'{{'}}date{{'}}'}}</code> ‚Üí Date d'aujourd'hui</div>
                                </div>
                                <p class="mt-2 text-xs text-blue-600">
                                    <strong>Exemple :</strong> "Bonjour {{'{{'}}prenom{{'}}'}}, nous esp√©rons que vous allez bien !"
                                </p>
                            </div>
                            <p class="mt-1 text-xs text-gray-500">
                                üé® HTML autoris√© : &lt;br&gt; &lt;b&gt; &lt;i&gt; &lt;u&gt; &lt;strong&gt; &lt;em&gt;
                            </p>
                        </div>

                        <!-- Options de destinataires -->
                        <div class="border-t border-gray-200 pt-6">
                            <h3 class="text-md font-medium text-gray-900 mb-4">Destinataires</h3>

                            <!-- Envoyer √† tous -->
                            <div class="mb-4">
                                <div class="flex items-center">
                                    {{ form_widget(form.sendToAll) }}
                                    {{ form_label(form.sendToAll, null, {'label_attr': {'class': 'ml-2 text-sm text-gray-700'}}) }}
                                </div>
                                <p class="mt-1 text-xs text-gray-500">Cochez cette case pour envoyer l'email √† tous les clients ({{ total_clients }} personnes)</p>
                            </div>

                            <!-- Listes pr√©d√©finies -->
                            <div class="mb-4">
                                <label class="block text-sm font-medium text-gray-700 mb-2">Ou s√©lectionner une liste pr√©d√©finie</label>
                                <div class="space-y-2">
                                    {% for key, list in mailing_lists %}
                                        <label class="flex items-start p-3 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer">
                                            <input
                                                type="radio"
                                                name="mailing_list"
                                                value="{{ key }}"
                                                class="mailing-list-radio mt-1 rounded-full border-gray-300 text-pink-600 shadow-sm focus:border-pink-300 focus:ring focus:ring-pink-200 focus:ring-opacity-50"
                                            >
                                            <div class="ml-3 flex-1">
                                                <div class="flex items-center justify-between">
                                                    <span class="text-sm font-medium text-gray-900">{{ list.name }}</span>
                                                    <span class="text-xs font-semibold px-2 py-1 bg-pink-100 text-pink-700 rounded-full">
                                                        {{ list.count }} client(s)
                                                    </span>
                                                </div>
                                                <p class="text-xs text-gray-500 mt-1">{{ list.description }}</p>
                                            </div>
                                        </label>
                                    {% endfor %}
                                </div>
                            </div>

                            <!-- Liste avec checkboxes -->
                            <div id="checkbox-selection" class="mb-4">
                                <div class="mb-3">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">S√©lectionner des clients</label>
                                    <!-- Barre de recherche filtre -->
                                    <input
                                        type="text"
                                        id="client-search"
                                        placeholder="üîç Rechercher par nom, pr√©nom ou email..."
                                        class="w-full rounded-lg border border-gray-300 px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500 mb-2"
                                    >
                                </div>
                                <div class="flex items-center justify-between mb-2">
                                    <p class="text-xs text-gray-500">
                                        <span id="visible-count">{{ clients|length }}</span> client(s) affich√©(s) ‚Ä¢
                                        <span id="selected-count">0</span> s√©lectionn√©(s)
                                    </p>
                                    <div class="flex gap-2">
                                        <button
                                            type="button"
                                            onclick="selectAllVisibleClients()"
                                            class="text-xs text-pink-600 hover:text-pink-700 font-medium"
                                        >
                                            ‚úì S√©lectionner visibles
                                        </button>
                                        <button
                                            type="button"
                                            onclick="deselectAllClients()"
                                            class="text-xs text-gray-600 hover:text-gray-700 font-medium"
                                        >
                                            ‚úï Tout d√©s√©lectionner
                                        </button>
                                    </div>
                                </div>
                                <div class="border border-gray-300 rounded-lg max-h-96 overflow-y-auto bg-gray-50">
                                    <div id="clients-list" class="divide-y divide-gray-200">
                                        {% if clients is empty %}
                                            <div class="p-4 text-center text-gray-500" id="no-clients-message">
                                                Aucun client enregistr√©
                                            </div>
                                        {% else %}
                                            {% for client in clients %}
                                                <label class="client-item flex items-center p-3 hover:bg-gray-100 cursor-pointer"
                                                       data-search="{{ (client.prenom ~ ' ' ~ client.nom ~ ' ' ~ client.email)|lower }}">
                                                    <input
                                                        type="checkbox"
                                                        name="selected_users[]"
                                                        value="{{ client.id }}"
                                                        class="client-checkbox rounded border-gray-300 text-pink-600 shadow-sm focus:border-pink-300 focus:ring focus:ring-pink-200 focus:ring-opacity-50"
                                                    >
                                                    <div class="ml-3 flex-1">
                                                        <div class="text-sm font-medium text-gray-900">
                                                            {{ client.prenom }} {{ client.nom }}
                                                        </div>
                                                        <div class="text-xs text-gray-500">
                                                            {{ client.email }}
                                                        </div>
                                                    </div>
                                                </label>
                                            {% endfor %}
                                            <div class="p-4 text-center text-gray-500 hidden" id="no-results-message">
                                                Aucun client ne correspond √† votre recherche
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Bouton d'envoi -->
                        <div class="border-t border-gray-200 pt-6">
                            {{ form_widget(form.submit) }}
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

                <!-- Informations utiles -->
                <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-blue-800">Conseils d'utilisation</h3>
                            <div class="mt-2 text-sm text-blue-700">
                                <ul class="list-disc list-inside space-y-1">
                                    <li>Les emails sont envoy√©s depuis <strong>beellenailscare@beellenails.com</strong></li>
                                    <li>Personnalisez votre message en utilisant le nom du client qui sera automatiquement ins√©r√©</li>
                                    <li>Testez d'abord avec un petit groupe avant d'envoyer √† tous les clients</li>
                                    <li>Les emails en erreur seront signal√©s individuellement</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const sendToAllCheckbox = document.getElementById('bulk_email_sendToAll');
    const checkboxSelection = document.getElementById('checkbox-selection');
    const clientCheckboxes = document.querySelectorAll('.client-checkbox');
    const selectedCountSpan = document.getElementById('selected-count');
    const visibleCountSpan = document.getElementById('visible-count');
    const searchInput = document.getElementById('client-search');
    const clientItems = document.querySelectorAll('.client-item');
    const noResultsMessage = document.getElementById('no-results-message');

    // Fonction pour mettre √† jour le compteur de s√©lectionn√©s
    function updateSelectedCount() {
        const checkedCount = document.querySelectorAll('.client-checkbox:checked').length;
        selectedCountSpan.textContent = checkedCount;
    }

    // Fonction pour mettre √† jour le compteur de visibles
    function updateVisibleCount() {
        const visibleCount = document.querySelectorAll('.client-item:not(.hidden)').length;
        visibleCountSpan.textContent = visibleCount;

        // Afficher/masquer le message "Aucun r√©sultat"
        if (visibleCount === 0 && searchInput.value.trim() !== '') {
            noResultsMessage.classList.remove('hidden');
        } else {
            noResultsMessage.classList.add('hidden');
        }
    }

    // Fonction de recherche/filtre en temps r√©el
    function filterClients() {
        const searchTerm = searchInput.value.toLowerCase().trim();

        clientItems.forEach(item => {
            const searchData = item.getAttribute('data-search');
            if (searchData.includes(searchTerm)) {
                item.classList.remove('hidden');
            } else {
                item.classList.add('hidden');
            }
        });

        updateVisibleCount();
    }

    // Fonction pour activer/d√©sactiver la s√©lection manuelle
    function toggleRecipients() {
        const mailingListRadios = document.querySelectorAll('.mailing-list-radio');
        const anyListSelected = Array.from(mailingListRadios).some(radio => radio.checked);

        if (sendToAllCheckbox.checked || anyListSelected) {
            checkboxSelection.style.opacity = '0.5';
            checkboxSelection.style.pointerEvents = 'none';
        } else {
            checkboxSelection.style.opacity = '1';
            checkboxSelection.style.pointerEvents = 'auto';
        }
    }

    // S√©lectionner tous les clients VISIBLES
    window.selectAllVisibleClients = function() {
        document.querySelectorAll('.client-item:not(.hidden) .client-checkbox').forEach(checkbox => {
            checkbox.checked = true;
        });
        updateSelectedCount();
    };

    // D√©s√©lectionner tous les clients
    window.deselectAllClients = function() {
        clientCheckboxes.forEach(checkbox => {
            checkbox.checked = false;
        });
        updateSelectedCount();
    };

    // √âcouter la saisie dans le champ de recherche (en temps r√©el)
    searchInput.addEventListener('input', filterClients);

    // √âcouter les changements sur les checkboxes
    clientCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', updateSelectedCount);
    });

    // √âcouter les changements sur "Envoyer √† tous"
    sendToAllCheckbox.addEventListener('change', toggleRecipients);

    // √âcouter les changements sur les listes pr√©d√©finies
    document.querySelectorAll('.mailing-list-radio').forEach(radio => {
        radio.addEventListener('change', function() {
            // D√©s√©lectionner "Envoyer √† tous" si une liste est s√©lectionn√©e
            if (this.checked) {
                sendToAllCheckbox.checked = false;
            }
            toggleRecipients();
        });
    });

    // D√©s√©lectionner les listes si on coche "Envoyer √† tous"
    sendToAllCheckbox.addEventListener('change', function() {
        if (this.checked) {
            document.querySelectorAll('.mailing-list-radio').forEach(radio => {
                radio.checked = false;
            });
        }
    });

    // √âtat initial
    toggleRecipients();
    updateSelectedCount();
    updateVisibleCount();
});
</script>
{% endblock %}