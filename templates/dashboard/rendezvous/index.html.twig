<section class="bg-gray-50 py-3 sm:py-5">
    <div class="mx-auto max-w-screen-xl px-2 lg:px-2">
        <!-- Start coding here -->
        <div class="bg-white relative shadow-md sm:rounded-lg overflow-hidden">
            <div class="flex flex-col md:flex-row items-center justify-between space-y-3 md:space-y-0 md:space-x-4 p-2">
                <div class="w-full md:w-1/2">
                    <form class="flex items-center">
                        <label for="simple-search" class="sr-only">Rechercher</label>
                        <div class="relative w-full">
                            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                <svg aria-hidden="true" class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <input type="text" id="simple-search" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full pl-10 p-2" placeholder="Rechercher" required="">
                        </div>
                    </form>
                </div>
                <div class="w-full md:w-auto flex flex-col md:flex-row space-y-2 md:space-y-0 items-stretch md:items-center justify-end md:space-x-3 flex-shrink-0">
                    <a href="{{ path('app_admin_rdv') }}"><button type="button" class="flex items-center justify-center text-pink-500 bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2">
                        <svg class="h-3.5 w-3.5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                            <path clip-rule="evenodd" fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" />
                        </svg>
                        Ajouter un rendez-vous
                    </button>
                    <a>
                </div>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th scope="col" class="px-4 py-3">Date Rdv</th>
                            <th scope="col" class="px-4 py-3">Creneau</th>
                            <th scope="col" class="px-4 py-3">Client</th>
                            <th scope="col" class="px-4 py-3">Prestation</th>
                            <th scope="col" class="px-4 py-3">Ajout</th>
                            <th scope="col" class="px-4 py-3">Status</th>
                            <th scope="col" class="px-4 py-3">Image</th>
                            <th scope="col" class="px-4 py-3">Dernière modification</th>
                            <th scope="col" class="px-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for rendezvous in rendezvouses %}
                        <tr class="border-b">
                            <td class="px-4 py-3">{{ rendezvous.day|date('d-m-Y') }}</td>
                            <td class="px-4 py-3">{{ rendezvous.creneau }}</td>
                            <td class="px-4 py-3">{{ rendezvous.user }}</td>
                            <td class="px-4 py-3">{{ rendezvous.prestation }}</td>
                            <td class="px-4 py-3">
                                {% for supplement in rendezvous.supplement %}
                                    {{ supplement.id }}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </td>
                            <td class="px-4 py-3">{{ rendezvous.status }}</td>
                            <td class="px-4 py-3">
                                {% if rendezvous.imageName %}
                                <a href="{{ vich_uploader_asset(rendezvous, 'image') }}"><img src="{{ vich_uploader_asset(rendezvous, 'image') }}" alt="RendezvousImage" style="max-width: 40px;"></a>
                                {% else %}
                                No image available
                                {% endif %}
                            </td>
                            <td class="px-4 py-3">{{ rendezvous.updated_at|date('d-m-Y H:i:s') }} GMT</td>
                            <td class="px-4 py-3">
                                {% if rendezvous.status != "Annulé" %}
                                <div class="flex felx-col items-center">
                                    <a href="{{ path('app_admin_rdv_edit', {'id': rendezvous.id}) }}" class="font-medium text-pink-600 hover:underline px-2">Reporter</a>
                                    <a href="{{ path('app_admin_rdv_cancel', {'id': rendezvous.id}) }}" class="font-medium text-pink-600 hover:underline px-2">Annuler</a>
                                    {% if rendezvous.status != "Rendez-vous confirmé" %}
                                    <a href="{{ path('app_admin_rdv_confirm', {'id': rendezvous.id}) }}" class="font-medium text-pink-600 hover:underline px-2"><button type="button" class="text-white bg-pink-700 hover:bg-pink-500 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-4 py-2 text-center">Confirmer</button></a>
                                    {% else %}
                                    <span class="opacity-50 cursor-not-allowed px-2"><button type="button" class="text-white bg-pink-700 hover:bg-pink-500 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-4 py-2 text-center">Confirmer</button></span>
                                    {% endif %}
                                </div>
                                {% else %}
                                <div class="flex felx-col items-center">
                                    <span class="opacity-50 cursor-not-allowed px-2">Reporter</span>
                                    <span class="opacity-50 cursor-not-allowed px-2">Annuler</span>
                                    <span class="opacity-50 cursor-not-allowed px-2"><button type="button" class="text-white bg-pink-700 hover:bg-pink-500 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-4 py-2 text-center">Confirmer</button></span>
                                </div>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('simple-search');
    const tableRows = document.querySelectorAll('tbody tr');

    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.trim().toLowerCase();

        tableRows.forEach(row => {
            const date = row.querySelector('td:nth-child(1)').textContent.trim().toLowerCase();
            const creneau = row.querySelector('td:nth-child(2)').textContent.trim().toLowerCase();
            const client = row.querySelector('td:nth-child(3)').textContent.trim().toLowerCase();
            const prestation = row.querySelector('td:nth-child(4)').textContent.trim().toLowerCase();

            if (date.includes(searchTerm) || creneau.includes(searchTerm) || client.includes(searchTerm) || prestation.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
});

</script>
