<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Prestation
                </th>
                <th scope="col" class="px-6 py-3">
                    Day
                </th>
                <th scope="col" class="px-6 py-3">
                    Creneau
                </th>
                <th scope="col" class="px-6 py-3">
                    User
                </th>
                <th scope="col" class="px-6 py-3">
                    Paid
                </th>
                <th scope="col" class="px-6 py-3">
                    Status
                </th>
                <th scope="col" class="px-6 py-3">
                    Image
                </th>
                <th scope="col" class="px-6 py-3">
                    <span class="sr-only">Edit</span>
                </th>
            </tr>
        </thead>
        <tbody>
            {% for rendezvous in rendezvouses %}
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    {{ rendezvous.getPrestation() }}
                </td>
                <td class="px-6 py-4">
                    {{ rendezvous.getDay()|date("Y-m-d") }}
                </td>
                <td class="px-6 py-4">
                    {{ rendezvous.getCreneau() }}
                </td>
                <td class="px-6 py-4">
                    {% if rendezvous.getUser() %}
                        {{ rendezvous.getUser() }}
                    {% else %}
                        None
                    {% endif %}
                </td>
                <td class="px-6 py-4">
                    {% if rendezvous.isPaid() %}
                        Yes
                    {% else %}
                        No
                    {% endif %}
                </td>
                <td class="px-6 py-4">
                    {{ rendezvous.getStatus() }}
                </td>
                <td class="px-6 py-4">
                    <img src="{{ vich_uploader_asset(rendezvous, 'image') }}" alt="{{ rendezvous.getPrestation() }}" style="max-width: 25px;">
                </td>
                <td class="px-6 py-4 text-right">
                    <a href="#" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
