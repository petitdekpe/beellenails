{% block javascripts %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialiser Select2 pour le s√©lecteur de client
    $('.js-example-basic-single').select2({
        placeholder: 'Choisir un client',
        allowClear: true
    });

    const datePicker = document.getElementById('datepicker');
    const slotsDropdown = document.getElementById('admin_add_rdv_creneau');
    const availabilityMessage = document.getElementById('availability-message');
    
    // Initialiser Flatpickr
    const picker = flatpickr("#datepicker", {
        enableTime: false,
        dateFormat: "Y-m-d",
        altInput: true,
        altFormat: "l j F Y",
        locale: "fr",
        minDate: "today",
        disable: [
            function(date) {
                return (date.getDay() === 1); // Lundi
            },
            function(date) {
                return (date.getDay() === 0); // Dimanche
            }
        ],
        theme: "light",
        onChange: function(selectedDates, dateStr, instance) {
            if (selectedDates.length > 0) {
                loadAvailableSlots(dateStr);
            } else {
                resetSlotsDropdown();
            }
        }
    });

    function loadAvailableSlots(selectedDate) {
        if (availabilityMessage) {
            availabilityMessage.classList.remove('hidden');
            availabilityMessage.innerHTML = `
                <div class="bg-yellow-50 rounded-lg p-3 border border-yellow-200">
                    <p class="text-sm text-yellow-800">
                        <span class="font-medium">Chargement des cr√©neaux disponibles...</span>
                    </p>
                </div>
            `;
        }

        const xhr = new XMLHttpRequest();
        xhr.open('POST', '/get-available-slots', true);
        xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
        
        xhr.onreadystatechange = function() {
            if (xhr.readyState === XMLHttpRequest.DONE) {
                if (xhr.status === 200) {
                    const slots = JSON.parse(xhr.responseText);
                    updateSlotsDropdown(slots);
                    
                    if (availabilityMessage) {
                        if (slots.length > 0) {
                            availabilityMessage.innerHTML = `
                                <div class="bg-green-50 rounded-lg p-3 border border-green-200">
                                    <p class="text-sm text-green-800">
                                        <span class="font-medium">${slots.length} cr√©neau${slots.length > 1 ? 'x' : ''} disponible${slots.length > 1 ? 's' : ''}</span>
                                    </p>
                                </div>
                            `;
                        } else {
                            availabilityMessage.innerHTML = `
                                <div class="bg-red-50 rounded-lg p-3 border border-red-200">
                                    <p class="text-sm text-red-800">
                                        <span class="font-medium">Aucun cr√©neau disponible pour cette date</span>
                                    </p>
                                </div>
                            `;
                        }
                    }
                } else {
                    if (availabilityMessage) {
                        availabilityMessage.innerHTML = `
                            <div class="bg-red-50 rounded-lg p-3 border border-red-200">
                                <p class="text-sm text-red-800">
                                    <span class="font-medium">Erreur lors du chargement des cr√©neaux</span>
                                </p>
                            </div>
                        `;
                    }
                }
            }
        };
        
        xhr.send('date=' + selectedDate);
    }

    function updateSlotsDropdown(slots) {
        if (slotsDropdown) {
            // Cr√©er un nouveau select
            const newSelect = document.createElement('select');
            newSelect.id = 'admin_add_rdv_creneau';
            newSelect.name = 'admin_add_rdv[creneau]';
            newSelect.className = 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-pink-500 focus:border-pink-500 block w-full pl-10 p-3';
            
            // Ajouter une option par d√©faut
            const defaultOption = document.createElement('option');
            defaultOption.value = '';
            defaultOption.text = 'S√©lectionnez un cr√©neau';
            newSelect.appendChild(defaultOption);
            
            // Ajouter les cr√©neaux disponibles
            slots.forEach(function(slot) {
                const option = document.createElement('option');
                option.value = slot.id;
                option.text = slot.libelle;
                newSelect.appendChild(option);
            });
            
            // Remplacer l'ancien select
            slotsDropdown.parentNode.replaceChild(newSelect, slotsDropdown);
            
            // Activer/d√©sactiver selon les cr√©neaux
            newSelect.disabled = slots.length === 0;
        }
    }

    function resetSlotsDropdown() {
        if (slotsDropdown) {
            slotsDropdown.innerHTML = '<option value="">S√©lectionnez d\'abord une date</option>';
            slotsDropdown.disabled = true;
        }
        if (availabilityMessage) {
            availabilityMessage.classList.add('hidden');
        }
    }

    // √âtat initial
    resetSlotsDropdown();
});
</script>

