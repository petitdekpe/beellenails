{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>
<script src="fullcalendar/core/locales/fr.global.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
    const calendarEl = document.getElementById('calendar');
    const calendar = new FullCalendar.Calendar(calendarEl, {
        events: {{ eventsJson | raw }},
        initialView: 'dayGridMonth',
        firstDay: 1,
        hiddenDays: [0, 1], // Dimanche et lundi ferm√©s
        headerToolbar: {
            left: 'prev,next today',
            center: 'title',
            right: 'dayGridMonth,timeGridWeek,timeGridDay'
        },
        buttonText: {
            today: 'Aujourd\'hui',
            month: 'Mois',
            week: 'Semaine',
            day: 'Jour'
        },
        locale: 'fr',
        height: 'auto',
        aspectRatio: 1.35,
        views: {
            timeGridWeek: {
                type: 'timeGrid',
                duration: { days: 7 },
                slotDuration: '00:30:00',
                slotLabelFormat: {
                    hour: 'numeric',
                    minute: '2-digit',
                    omitZeroMinute: false,
                    hour12: false
                },
                slotMinTime: '09:00:00',
                slotMaxTime: '19:00:00',
                scrollTime: '09:00',
                businessHours: [
                    {
                        daysOfWeek: [2, 3, 4, 5, 6], // Mardi √† samedi
                        startTime: '09:00',
                        endTime: '12:00'
                    },
                    {
                        daysOfWeek: [2, 3, 4, 5, 6],
                        startTime: '13:00',
                        endTime: '17:30'
                    }
                ]
            },
            timeGridDay: {
                type: 'timeGrid',
                duration: { days: 1 },
                slotDuration: '00:30:00',
                slotLabelFormat: {
                    hour: 'numeric',
                    minute: '2-digit',
                    omitZeroMinute: false,
                    hour12: false
                },
                businessHours: [
                    {
                        daysOfWeek: [2, 3, 4, 5, 6],
                        startTime: '09:00',
                        endTime: '12:00'
                    },
                    {
                        daysOfWeek: [2, 3, 4, 5, 6],
                        startTime: '13:00',
                        endTime: '17:30'
                    }
                ],
                slotMinTime: '09:00:00',
                slotMaxTime: '19:00:00',
                scrollTime: '09:00'
            }
        },
        eventMouseEnter(info) {
            const {event, jsEvent} = info;
            const box = document.createElement('div');
            box.className = 'absolute z-50 inline-block w-64 text-sm text-gray-700 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-lg opacity-0';
            box.innerHTML = `
                <div class="p-4">
                    <p class="text-base font-semibold text-gray-900 mb-2">${event.title}</p>
                    <p class="mb-2 flex items-center">
                        <span class="w-2 h-2 rounded-full mr-2" style="background-color: ${event.backgroundColor || event.color}"></span>
                        <strong>Prestation :</strong> <span class="ml-1">${event.extendedProps.prestation}</span>
                    </p>
                    <p class="mb-1 text-gray-600"><strong>D√©but :</strong> ${event.start.toLocaleString('fr-FR')}</p>
                    <p class="text-gray-600"><strong>Fin :</strong> ${event.end.toLocaleString('fr-FR')}</p>
                </div>`;
            
            // Position le tooltip pr√®s du curseur
            box.style.position = 'absolute';
            box.style.left = (jsEvent.pageX + 10) + 'px';
            box.style.top = (jsEvent.pageY - 10) + 'px';
            box.style.zIndex = '1000';
            
            document.body.appendChild(box);
            setTimeout(() => box.classList.add('opacity-100'), 50);
            event.setExtendedProp('detailBox', box);
        },
        eventMouseLeave(info) {
            const box = info.event.extendedProps.detailBox;
            if (box) {
                box.remove();
                info.event.setExtendedProp('detailBox', null);
            }
        },
        eventClick(info) {
            if (info.event.extendedProps.image) {
                const imageUrl = `/assets/images/rendezvous/${info.event.extendedProps.image}`;
                window.open(imageUrl, '_blank');
            } else {
                // Rediriger vers les d√©tails du rendez-vous
                window.location.href = `{{ path('app_dashboard_rendezvous') }}?search=${encodeURIComponent(info.event.title)}`;
            }
        }
    });
    calendar.render();
});
</script>
{% endblock %}