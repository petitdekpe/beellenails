<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>
			{% block title %}Tableau de bord
			{% endblock %}
		</title>

		<!-- Favicon -->
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
		<link rel="manifest" href="/favicon/site.webmanifest">
		<link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta
		name="theme-color" content="#ffffff">

		<!-- Tailwind & Flowbite -->
		<script src="https://cdn.tailwindcss.com"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.js"></script>

		{% block stylesheets %}
			<style>
				.fc-toolbar-title,
				.fc-col-header-cell-cushion {
					text-transform: capitalize;
				}
				.fc .fc-button {
					background-color: rgb(236 72 153);
					color: white;
					border: none;
					border-radius: 0.375rem;
					padding: 0.5rem 1rem;
					font-weight: 500;
				}
				.fc .fc-button:hover,
				.fc .fc-button-active {
					background-color: rgb(219 39 119);
					color: white;
				}
				.fc {
					background-color: white;
					border-radius: 0.5rem;
					padding: 1rem;
					box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
				}
				.fc-event {
					cursor: pointer;
					white-space: normal !important;
					overflow-wrap: break-word;
				}
				.fc-daygrid-event:hover {
					background-color: #fef3c7;
				}
			</style>
		{% endblock %}

		<script src="https://cdn.fedapay.com/checkout.js?v=1.1.7"></script>
		<script src="/js/preline.js"></script>

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>
			<script src="fullcalendar/core/locales/fr.global.js"></script>
			<script>
				document.addEventListener('DOMContentLoaded', function () {
const calendarEl = document.getElementById('calendar');
const calendar = new FullCalendar.Calendar(calendarEl, {
events: {{ eventsJson | raw }},
initialView: 'dayGridMonth',
firstDay: 1,
hiddenDays: [
0, 1
],
headerToolbar: {
left: 'prev,next',
center: 'title',
right: 'dayGridMonth,timeGridWeek,timeGridDay'
},
buttonText: {
today: 'Aujourd\'hui',
month: 'Mois',
timeGridWeek: 'Semaine',
day: 'Jour'
},
locale: 'fr',
views: {
timeGridWeek: {
type: 'timeGrid',
duration: {
days: 7
},
slotDuration: '00:30:00',
slotLabelFormat: {
hour: 'numeric',
minute: '2-digit',
omitZeroMinute: false,
hour12: false
},
slotMinTime: '09:00:00',
slotMaxTime: '19:00:00',
scrollTime: '09:00'
},
timeGridDay: {
type: 'timeGrid',
duration: {
days: 1
},
slotDuration: '00:30:00',
slotLabelFormat: {
hour: 'numeric',
minute: '2-digit',
omitZeroMinute: false,
hour12: false
},
businessHours: [
{
daysOfWeek: [
1,
2,
3,
4,
5
],
startTime: '09:00',
endTime: '12:00'
}, {
daysOfWeek: [
1,
2,
3,
4,
5
],
startTime: '13:00',
endTime: '17:30'
}
],
slotMinTime: '09:00:00',
slotMaxTime: '19:00:00',
scrollTime: '09:00'
}
},
eventMouseEnter(info) {
const {event, jsEvent} = info;
const box = document.createElement('div');
box.className = 'absolute z-50 inline-block w-64 text-sm text-gray-700 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-lg opacity-0';
box.innerHTML = `
            <div class="p-3">
              <p class="text-base font-semibold text-gray-900">${
event.title
}</p>
              <p class="mb-2"><strong>Prestation :</strong> ${
event.extendedProps.prestation
}</p>
              <p class="mb-2"><strong>DÃ©but :</strong> ${
event.start.toLocaleString()
}</p>
              <p><strong>Fin :</strong> ${
event.end.toLocaleString()
}</p>
            </div>`;
box.style.left = jsEvent.pageX + 'px';
box.style.top = jsEvent.pageY + 'px';
document.body.appendChild(box);
setTimeout(() => box.classList.add('opacity-100'), 50);
event.setExtendedProp('detailBox', box);
},
eventMouseLeave(info) {
const box = info.event.extendedProps.detailBox;
if (box) {
box.remove();
info.event.setExtendedProp('detailBox', null);
}
},
eventClick(info) {
const imageUrl = `/assets/images/rendezvous/${
info.event.extendedProps.image
}`;
window.location.href = imageUrl;
}
});
calendar.render();
});
			</script>
		{% endblock %}
	</head>
	<body class="bg-gray-100">
		{% block body %}
			<div class="flex min-h-screen">
				{% include '_sidebar.html.twig' %}
				<!-- Main content -->
				<main class="flex-1 p-6">
					{% if app.request.query.has('message') %}
						<div class="p-4 mb-4 text-sm text-red-800 bg-red-100 border border-red-300 rounded">
							<strong>Attention :</strong>
							{{ app.request.query.get('message') }}
						</div>
					{% endif %}

					<h1 class="text-2xl font-semibold mb-2">Bonjour,
						{{ app.user }}</h1>
					<p class="mb-6">Voici votre agenda :</p>
					<div id="calendar" class="rounded-lg border border-gray-200 bg-white p-4 shadow-md max-w-5xl mx-auto h-[600px] overflow-hidden"></div>
				</main>
			</div>
		{% endblock %}
	</body>
</html>
