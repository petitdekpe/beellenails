{% block javascripts %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>

<script>
function validateDates() {
    const start = new Date(document.getElementById("start-datepicker").value);
    const end = new Date(document.getElementById("end-datepicker").value);
    
    if (!start || !end) {
        alert("Veuillez s√©lectionner les deux dates.");
        return false;
    }
    
    if (start >= end) {
        alert("La date de d√©but doit √™tre ant√©rieure √† la date de fin.");
        return false;
    }
    
    return true;
}

document.addEventListener('DOMContentLoaded', function() {
    let startPicker, endPicker;
    
    startPicker = flatpickr("#start-datepicker", {
        defaultDate: null,
        enableTime: false,
        dateFormat: "Y-m-d",
        altInput: true,
        altFormat: "l j F Y",
        locale: "fr",
        minDate: "today",
        disable: [
            function(date) { return (date.getDay() === 1); }, // Lundi
            function(date) { return (date.getDay() === 0); }  // Dimanche
        ],
        onChange: function(selectedDates, dateStr, instance) {
            if (selectedDates.length > 0) {
                endPicker.set('minDate', dateStr);
                updatePreview();
            }
        }
    });
    
    endPicker = flatpickr("#end-datepicker", {
        defaultDate: null,
        enableTime: false,
        dateFormat: "Y-m-d",
        altInput: true,
        altFormat: "l j F Y",
        locale: "fr",
        minDate: "today",
        disable: [
            function(date) { return (date.getDay() === 1); }, // Lundi
            function(date) { return (date.getDay() === 0); }  // Dimanche
        ],
        onChange: function(selectedDates, dateStr, instance) {
            updatePreview();
        }
    });
    
    function updatePreview() {
        const startDate = startPicker.selectedDates[0];
        const endDate = endPicker.selectedDates[0];
        const previewDiv = document.getElementById('period-preview');
        const previewContent = document.getElementById('preview-content');
        
        if (startDate && endDate && startDate <= endDate) {
            const diffTime = Math.abs(endDate - startDate);
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)) + 1;
            
            // Count working days only (exclude weekends)
            let workingDays = 0;
            let currentDate = new Date(startDate);
            while (currentDate <= endDate) {
                const dayOfWeek = currentDate.getDay();
                if (dayOfWeek !== 0 && dayOfWeek !== 1) { // Not Sunday or Monday
                    workingDays++;
                }
                currentDate.setDate(currentDate.getDate() + 1);
            }
            
            previewContent.innerHTML = `
                <p><strong>P√©riode :</strong> du ${startDate.toLocaleDateString('fr-FR')} au ${endDate.toLocaleDateString('fr-FR')}</p>
                <p><strong>Dur√©e totale :</strong> ${diffDays} jour${diffDays > 1 ? 's' : ''}</p>
                <p><strong>Jours ouvrables concern√©s :</strong> ${workingDays} jour${workingDays > 1 ? 's' : ''}</p>
                <p class="text-amber-600 mt-2"><strong>Note :</strong> Les dimanches et lundis sont automatiquement exclus.</p>
            `;
            previewDiv.classList.remove('hidden');
        } else {
            previewDiv.classList.add('hidden');
        }
    }
});
</script>

