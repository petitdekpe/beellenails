{% extends 'base.html.twig' %}

{% block title %}Dashboard - Clients{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <div class="flex">
        <!-- Sidebar -->
        {% include '_sidebar.html.twig' %}
        
        <!-- Main Content -->
        <div class="flex-1 {% if is_granted('ROLE_ADMIN') %}lg:ml-8{% endif %}">
            <div class="px-4 py-6 sm:px-6 lg:px-8">
                <!-- Header -->
                <div class="mb-6">
                    <h1 class="text-2xl font-bold text-gray-900">Gestion des clients</h1>
                    <p class="text-sm text-gray-600">{{ users.getTotalItemCount }} client(s) au total{% if search %} ({{ users|length }} r√©sultat(s) trouv√©(s)){% endif %}</p>
                </div>

                <!-- Barre de recherche et actions -->
                <div class="bg-white rounded-lg shadow mb-6">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                            <h2 class="text-lg font-medium text-gray-900">Rechercher et filtrer</h2>
                            <a href="{{ path('app_dashboard_add_user') }}" class="inline-flex items-center px-4 py-2 bg-pink-600 hover:bg-pink-700 text-white font-medium rounded-lg transition-colors">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                Ajouter un client
                            </a>
                        </div>
                    </div>
                    <div class="px-6 py-4">
                        <form method="GET" class="space-y-4">
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                                    </svg>
                                </div>
                                <input type="text" 
                                       name="search" 
                                       value="{{ search }}" 
                                       class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-pink-500 focus:border-pink-500" 
                                       placeholder="Rechercher par nom, email ou t√©l√©phone..."
                                       id="search-input">
                            </div>
                            <div class="flex gap-2">
                                <button type="submit" class="bg-pink-600 hover:bg-pink-700 text-white font-medium py-2 px-4 rounded-lg transition-colors">
                                    Rechercher
                                </button>
                                <a href="{{ path('app_dashboard_user') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-lg transition-colors">
                                    R√©initialiser
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Liste des clients -->
                <div class="bg-white rounded-lg shadow">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-lg font-medium text-gray-900">
                            üë• Liste des clients
                            {% if search %}
                                <span class="text-sm font-normal text-gray-500">(r√©sultats pour "{{ search }}")</span>
                            {% endif %}
                        </h3>
                    </div>
                    <div class="overflow-hidden">
                        {% if users|length > 0 %}
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-pink-50">
                                        <tr>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-pink-600 uppercase tracking-wider">
                                                Client
                                            </th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-pink-600 uppercase tracking-wider">
                                                Contact
                                            </th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-pink-600 uppercase tracking-wider">
                                                Informations
                                            </th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-pink-600 uppercase tracking-wider">
                                                Inscription
                                            </th>
                                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-pink-600 uppercase tracking-wider">
                                                Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        {% for user in users %}
                                            <tr class="hover:bg-gray-50 transition-colors">
                                                <td class="px-6 py-4">
                                                    <div class="flex items-center">
                                                        <div class="flex-shrink-0 h-10 w-10">
                                                            <div class="h-10 w-10 rounded-full bg-pink-100 flex items-center justify-center">
                                                                <span class="text-sm font-medium text-pink-600">
                                                                    {% if user.Prenom and user.Nom %}
                                                                        {{ user.Prenom|slice(0, 1)|upper }}{{ user.Nom|slice(0, 1)|upper }}
                                                                    {% else %}
                                                                        N/A
                                                                    {% endif %}
                                                                </span>
                                                            </div>
                                                        </div>
                                                        <div class="ml-4">
                                                            <div class="text-sm font-medium text-gray-900">
                                                                {{ user.fullName }}
                                                            </div>
                                                            <div class="text-sm text-gray-500">
                                                                Client depuis {{ user.createdAt ? user.createdAt|date('M Y') : 'N/A' }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="px-6 py-4">
                                                    <div class="text-sm text-gray-900">{{ user.email }}</div>
                                                    <div class="text-sm text-gray-500">{{ user.Phone ?: 'Non renseign√©' }}</div>
                                                </td>
                                                <td class="px-6 py-4">
                                                    <div class="flex flex-col gap-1">
                                                        {% if user.birthday %}
                                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                                üéÇ {{ user.birthday|date('d/m/Y') }}
                                                            </span>
                                                        {% endif %}
                                                        {% if user.genre %}
                                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                                                {{ user.genre }}
                                                            </span>
                                                        {% endif %}
                                                        {% if not user.birthday and not user.genre %}
                                                            <span class="text-xs text-gray-400">Aucune info</span>
                                                        {% endif %}
                                                    </div>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    {% if user.createdAt %}
                                                        <div class="text-sm text-gray-900">{{ user.createdAt|date('d/m/Y') }}</div>
                                                        <div class="text-xs text-gray-500">{{ user.createdAt|date('H:i') }}</div>
                                                    {% else %}
                                                        <span class="text-xs text-gray-400">Date inconnue</span>
                                                    {% endif %}
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                    <div class="flex items-center justify-end space-x-2">
                                                        <a href="{{ path('app_user_show', {'id': user.id}) }}" 
                                                           class="text-blue-600 hover:text-blue-900 transition-colors" 
                                                           title="Voir le profil">
                                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                                            </svg>
                                                        </a>
                                                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" 
                                                           class="text-pink-600 hover:text-pink-900 transition-colors" 
                                                           title="Modifier">
                                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                                            </svg>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="px-6 py-12 text-center">
                                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                                </svg>
                                <h3 class="mt-2 text-sm font-medium text-gray-900">
                                    {% if search %}
                                        Aucun client trouv√©
                                    {% else %}
                                        Aucun client enregistr√©
                                    {% endif %}
                                </h3>
                                <p class="mt-1 text-sm text-gray-500">
                                    {% if search %}
                                        Essayez avec d'autres mots-cl√©s ou r√©initialisez la recherche.
                                    {% else %}
                                        Commencez par ajouter votre premier client.
                                    {% endif %}
                                </p>
                                <div class="mt-6">
                                    {% if search %}
                                        <a href="{{ path('app_dashboard_user') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-pink-600 hover:bg-pink-700">
                                            R√©initialiser la recherche
                                        </a>
                                    {% else %}
                                        <a href="{{ path('app_dashboard_add_user') }}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-pink-600 hover:bg-pink-700">
                                            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                            </svg>
                                            Ajouter un client
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    
                    <!-- Pagination -->
                    {% if users.getTotalItemCount > 0 %}
                        <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
                            <div class="flex-1 flex justify-between sm:hidden">
                                {% if users.getCurrentPageNumber > 1 %}
                                    <a href="{{ path('app_dashboard_user', app.request.query.all|merge({'page': users.getCurrentPageNumber - 1})) }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                        Pr√©c√©dent
                                    </a>
                                {% endif %}
                                {% if users.getCurrentPageNumber < users.getPageCount %}
                                    <a href="{{ path('app_dashboard_user', app.request.query.all|merge({'page': users.getCurrentPageNumber + 1})) }}" class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                        Suivant
                                    </a>
                                {% endif %}
                            </div>
                            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                                <div>
                                    {% set itemsPerPage = users.getItemNumberPerPage %}
                                    {% set currentPage = users.getCurrentPageNumber %}
                                    {% set totalItems = users.getTotalItemCount %}
                                    {% set startItem = ((currentPage - 1) * itemsPerPage) + 1 %}
                                    {% set endItem = (currentPage * itemsPerPage) > totalItems ? totalItems : (currentPage * itemsPerPage) %}
                                    
                                    <p class="text-sm text-gray-700">
                                        Affichage de
                                        <span class="font-medium">{{ startItem }}</span>
                                        √†
                                        <span class="font-medium">{{ endItem }}</span>
                                        sur
                                        <span class="font-medium">{{ totalItems }}</span>
                                        r√©sultats
                                    </p>
                                </div>
                                <div>
                                    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                                        {% if users.getCurrentPageNumber > 1 %}
                                            <a href="{{ path('app_dashboard_user', app.request.query.all|merge({'page': users.getCurrentPageNumber - 1})) }}" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                                <span class="sr-only">Pr√©c√©dent</span>
                                                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                                                </svg>
                                            </a>
                                        {% endif %}

                                        {% set startPage = users.getCurrentPageNumber - 2 %}
                                        {% set endPage = users.getCurrentPageNumber + 2 %}
                                        {% if startPage < 1 %}
                                            {% set startPage = 1 %}
                                        {% endif %}
                                        {% if endPage > users.getPageCount %}
                                            {% set endPage = users.getPageCount %}
                                        {% endif %}

                                        {% for page in startPage..endPage %}
                                            {% if page == users.getCurrentPageNumber %}
                                                <span class="bg-pink-50 border-pink-500 text-pink-600 relative inline-flex items-center px-4 py-2 border text-sm font-medium">
                                                    {{ page }}
                                                </span>
                                            {% else %}
                                                <a href="{{ path('app_dashboard_user', app.request.query.all|merge({'page': page})) }}" class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium">
                                                    {{ page }}
                                                </a>
                                            {% endif %}
                                        {% endfor %}

                                        {% if users.getCurrentPageNumber < users.getPageCount %}
                                            <a href="{{ path('app_dashboard_user', app.request.query.all|merge({'page': users.getCurrentPageNumber + 1})) }}" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                                <span class="sr-only">Suivant</span>
                                                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                                </svg>
                                            </a>
                                        {% endif %}
                                    </nav>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Auto-focus sur le champ de recherche si vide
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-input');
    if (searchInput && !searchInput.value) {
        searchInput.focus();
    }
});

// Soumission automatique apr√®s un d√©lai de frappe
let searchTimeout;
document.getElementById('search-input').addEventListener('input', function(e) {
    clearTimeout(searchTimeout);
    searchTimeout = setTimeout(() => {
        if (e.target.value.length >= 2 || e.target.value.length === 0) {
            e.target.form.submit();
        }
    }, 500);
});
</script>
{% endblock %}
