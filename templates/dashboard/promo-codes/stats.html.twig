{% extends 'dashboard.html.twig' %}

{% block title %}Dashboard - Statistiques des Codes Promo{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto">
        
        <!-- Main Content -->
        <div 
            <div class="px-4 py-6 sm:px-6 lg:px-8">
                <!-- Header avec breadcrumb -->
                <div class="mb-6">
                    <nav class="mb-4" aria-label="Breadcrumb">
                        <ol class="flex items-center space-x-2 text-sm">
                            <li><a href="{{ path('app_promo_codes') }}" class="text-gray-500 hover:text-gray-700">Codes Promo</a></li>
                            <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/></svg>
                            <li class="text-gray-900 font-medium">Statistiques</li>
                        </ol>
                    </nav>
                    <h1 class="text-2xl font-bold text-gray-900">üìä Statistiques des codes promo</h1>
                </div>

                <!-- Filtres de p√©riode -->
                <div class="mb-6 bg-white rounded-lg shadow p-4">
                    <div class="flex items-center space-x-4">
                        <label class="text-sm font-medium text-gray-700">P√©riode :</label>
                        <select id="period-filter" class="rounded border-gray-300 text-sm" onchange="changePeriod()">
                            <option value="7days" {{ period == '7days' ? 'selected' : '' }}>7 derniers jours</option>
                            <option value="30days" {{ period == '30days' ? 'selected' : '' }}>30 derniers jours</option>
                            <option value="90days" {{ period == '90days' ? 'selected' : '' }}>90 derniers jours</option>
                            <option value="year" {{ period == 'year' ? 'selected' : '' }}>Derni√®re ann√©e</option>
                        </select>
                        <span class="text-sm text-gray-500">
                            Du {{ from|date('d/m/Y') }} au {{ to|date('d/m/Y') }}
                        </span>
                    </div>
                </div>

                <!-- Statistiques globales -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                    <div class="bg-white overflow-hidden shadow rounded-lg">
                        <div class="p-5">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                                        <span class="text-white text-sm">üìã</span>
                                    </div>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 truncate">Total tentatives</dt>
                                        <dd class="text-lg font-medium text-gray-900">{{ globalStats.totalAttempts|number_format(0, ',', ' ') }}</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white overflow-hidden shadow rounded-lg">
                        <div class="p-5">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                                        <span class="text-white text-sm">‚úÖ</span>
                                    </div>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 truncate">Valid√©es</dt>
                                        <dd class="text-lg font-medium text-gray-900">{{ globalStats.validatedUsages|number_format(0, ',', ' ') }}</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white overflow-hidden shadow rounded-lg">
                        <div class="p-5">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
                                        <span class="text-white text-sm">üí∞</span>
                                    </div>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 truncate">R√©duction totale</dt>
                                        <dd class="text-lg font-medium text-gray-900">{{ globalStats.totalDiscount|number_format(0, ',', ' ') }} FCFA</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white overflow-hidden shadow rounded-lg">
                        <div class="p-5">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                                        <span class="text-white text-sm">üìà</span>
                                    </div>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 truncate">Taux de succ√®s</dt>
                                        <dd class="text-lg font-medium text-gray-900">{{ globalStats.successRate|number_format(1) }}%</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Graphique d'utilisation par p√©riode -->
                {% if usageByPeriod is not empty %}
                <div class="bg-white shadow rounded-lg mb-8">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h2 class="text-lg font-medium text-gray-900">üìà √âvolution des utilisations</h2>
                    </div>
                    <div class="p-6">
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Utilisations</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">R√©duction totale</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    {% for usage in usageByPeriod %}
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {{ usage.date|date('d/m/Y') }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {{ usage.count }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                            {{ usage.totalDiscount|number_format(0, ',', ' ') }} FCFA
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                {% endif %}

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Top des codes les plus utilis√©s -->
                    {% if topCodes is not empty %}
                    <div class="bg-white shadow rounded-lg">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h2 class="text-lg font-medium text-gray-900">üèÜ Codes les plus utilis√©s</h2>
                        </div>
                        <div class="p-6">
                            <div class="space-y-4">
                                {% for code in topCodes %}
                                <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
                                    <div>
                                        <div class="font-medium text-gray-900">{{ code.code }}</div>
                                        <div class="text-sm text-gray-500">{{ code.name }}</div>
                                    </div>
                                    <div class="text-right">
                                        <div class="font-medium text-gray-900">{{ code.usageCount }} utilisations</div>
                                        <div class="text-sm text-gray-500">{{ code.totalSaved|number_format(0, ',', ' ') }} FCFA √©conomis√©s</div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    <!-- Top des utilisateurs -->
                    {% if topUsers is not empty %}
                    <div class="bg-white shadow rounded-lg">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h2 class="text-lg font-medium text-gray-900">üë• Utilisateurs les plus actifs</h2>
                        </div>
                        <div class="p-6">
                            <div class="space-y-4">
                                {% for user in topUsers %}
                                <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
                                    <div>
                                        <div class="font-medium text-gray-900">{{ user.prenom }} {{ user.nom }}</div>
                                        <div class="text-sm text-gray-500">{{ user.email }}</div>
                                    </div>
                                    <div class="text-right">
                                        <div class="font-medium text-gray-900">{{ user.usageCount }} codes utilis√©s</div>
                                        <div class="text-sm text-green-600">{{ user.totalSaved|number_format(0, ',', ' ') }} FCFA √©conomis√©s</div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>

                <!-- Tentatives suspectes -->
                {% if suspiciousAttempts is not empty %}
                <div class="mt-8 bg-white shadow rounded-lg">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h2 class="text-lg font-medium text-gray-900">‚ö†Ô∏è Tentatives suspectes (24h)</h2>
                    </div>
                    <div class="p-6">
                        <div class="space-y-3">
                            {% for attempt in suspiciousAttempts %}
                            <div class="flex items-center justify-between p-3 bg-red-50 border border-red-200 rounded">
                                <div>
                                    <div class="font-medium text-red-900">IP: {{ attempt.ipAddress }}</div>
                                    <div class="text-sm text-red-700">{{ attempt.userAgent|slice(0, 60) }}...</div>
                                </div>
                                <div class="text-right">
                                    <div class="font-bold text-red-900">{{ attempt.attemptCount }} tentatives</div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<script>
function changePeriod() {
    const period = document.getElementById('period-filter').value;
    window.location.href = '{{ path('app_promo_codes_stats') }}?period=' + period;
}
</script>
{% endblock %}