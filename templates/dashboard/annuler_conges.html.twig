{% extends 'base.html.twig' %}

{% block title %}Dashboard - Annuler des congés (Période){% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <div class="flex">
        <!-- Sidebar -->
        {% include '_sidebar.html.twig' %}
        
        <!-- Main Content -->
        <div class="flex-1 {% if is_granted('ROLE_ADMIN') %}lg:ml-8{% endif %}">
            <div class="px-4 py-6 sm:px-6 lg:px-8">
                <!-- Header -->
                <div class="mb-6">
                    <h1 class="text-2xl font-bold text-gray-900">❌ Annuler des congés (Période)</h1>
                    <p class="text-sm text-gray-600">Supprimez les congés sur une période complète</p>
                </div>

                <!-- Navigation -->
                <nav class="mb-6" aria-label="Breadcrumb">
                    <ol class="flex items-center space-x-2 text-sm">
                        <li><a href="{{ path('app_dashboard_conges') }}" class="text-gray-500 hover:text-gray-700">Congés</a></li>
                        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/></svg>
                        <li class="text-gray-900 font-medium">Annuler (Période)</li>
                    </ol>
                </nav>

                <!-- Flash Messages -->
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="mb-6 p-4 text-sm rounded-lg {% if type == 'success' %}text-green-800 bg-green-50 border border-green-200{% elseif type == 'warning' %}text-yellow-800 bg-yellow-50 border border-yellow-200{% else %}text-red-800 bg-red-50 border border-red-200{% endif %}">
                            <div class="flex items-center">
                                {% if type == 'success' %}
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                {% elseif type == 'warning' %}
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                    </svg>
                                {% else %}
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                                    </svg>
                                {% endif %}
                                {{ message }}
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}

                <!-- Formulaire principal -->
                <div class="bg-white rounded-lg shadow">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h2 class="text-lg font-medium text-gray-900">Sélectionner la période à annuler</h2>
                        <p class="text-sm text-gray-500 mt-1">Définissez la période dont vous souhaitez supprimer tous les congés</p>
                    </div>
                    <div class="px-6 py-6">
                        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        
                        <div class="bg-red-50 rounded-lg p-4 border border-red-200">
                            <div class="flex items-start">
                                <div class="flex-shrink-0">
                                    <svg class="w-5 h-5 text-red-600 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <h3 class="text-sm font-medium text-red-900">Attention</h3>
                                    <p class="text-sm text-red-700 mt-1">
                                        Cette action va supprimer définitivement tous les congés de la période sélectionnée. 
                                        Tous les créneaux concernés redeviendront disponibles pour la réservation.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                {{ form_label(form.start_date, 'Date de début', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                                        </svg>
                                    </div>
                                    <input type="text" name="{{ field_name(form.start_date) }}" value="{{ field_value(form.start_date) }}" 
                                           placeholder="Date de début de l'annulation" 
                                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-red-500 focus:border-red-500 block w-full pl-10 p-3" 
                                           id="start-datepicker" readonly>
                                </div>
                            </div>

                            <div>
                                {{ form_label(form.end_date, 'Date de fin', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                                        </svg>
                                    </div>
                                    <input type="text" name="{{ field_name(form.end_date) }}" value="{{ field_value(form.end_date) }}" 
                                           placeholder="Date de fin de l'annulation" 
                                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-red-500 focus:border-red-500 block w-full pl-10 p-3" 
                                           id="end-datepicker" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="bg-amber-50 rounded-lg p-4 border border-amber-200">
                            <div class="flex items-start">
                                <div class="flex-shrink-0">
                                    <svg class="w-5 h-5 text-amber-600 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <h3 class="text-sm font-medium text-amber-900">Information</h3>
                                    <p class="text-sm text-amber-700 mt-1">
                                        Seuls les jours ouvrables (mardi à samedi) de la période sont concernés. 
                                        Si aucun congé n'existe sur cette période, vous en serez informé.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div id="cancel-preview" class="hidden bg-gray-50 rounded-lg p-4 border border-gray-200">
                            <h3 class="text-sm font-medium text-gray-900 mb-2">Aperçu de l'annulation</h3>
                            <div id="cancel-content" class="text-sm text-gray-600"></div>
                        </div>

                        <div class="flex items-center justify-between pt-6 border-t border-gray-200">
                            <a href="{{ path('app_dashboard_conges') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0L2.586 11l3.707-3.707a1 1 0 011.414 1.414L5.414 11l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
                                </svg>
                                Retour
                            </a>
                            <button type="submit" onclick="return validateDates() && confirm('Êtes-vous absolument sûr de vouloir annuler tous les congés de cette période ? Cette action est irréversible.')" class="inline-flex items-center px-6 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg text-sm transition-colors">
                                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                </svg>
                                Annuler les congés de la période
                            </button>
                        </div>

                        {{ form_widget(form._token) }}
                        {{ form_end(form, {'render_rest': false}) }}
                    </div>
                </div>

                <!-- Actions alternatives -->
                <div class="mt-6 bg-white rounded-lg shadow">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h2 class="text-lg font-medium text-gray-900">Actions alternatives</h2>
                    </div>
                    <div class="px-6 py-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <a href="{{ path('cancel_conge') }}" class="block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                                <div class="flex items-start">
                                    <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center mr-4">
                                        <svg class="w-6 h-6 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="font-medium text-gray-900">Annuler une journée</h3>
                                        <p class="text-sm text-gray-500 mt-1">Supprimez le congé d'une seule journée spécifique</p>
                                    </div>
                                </div>
                            </a>
                            
                            <a href="{{ path('app_dashboard_conges') }}" class="block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                                <div class="flex items-start">
                                    <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                                        <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="font-medium text-gray-900">Voir tous les congés</h3>
                                        <p class="text-sm text-gray-500 mt-1">Consultez la liste complète de vos congés planifiés</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>

<script>
function validateDates() {
    const start = new Date(document.getElementById("start-datepicker").value);
    const end = new Date(document.getElementById("end-datepicker").value);
    
    if (!start || !end) {
        alert("Veuillez sélectionner les deux dates.");
        return false;
    }
    
    if (start >= end) {
        alert("La date de début doit être antérieure à la date de fin.");
        return false;
    }
    
    return true;
}

document.addEventListener('DOMContentLoaded', function() {
    let startPicker, endPicker;
    
    startPicker = flatpickr("#start-datepicker", {
        defaultDate: null,
        enableTime: false,
        dateFormat: "Y-m-d",
        altInput: true,
        altFormat: "l j F Y",
        locale: "fr",
        maxDate: new Date().fp_incr(365),
        disable: [
            function(date) { return (date.getDay() === 1); }, // Lundi
            function(date) { return (date.getDay() === 0); }  // Dimanche
        ],
        onChange: function(selectedDates, dateStr, instance) {
            if (selectedDates.length > 0) {
                endPicker.set('minDate', dateStr);
                updateCancelPreview();
            }
        }
    });
    
    endPicker = flatpickr("#end-datepicker", {
        defaultDate: null,
        enableTime: false,
        dateFormat: "Y-m-d",
        altInput: true,
        altFormat: "l j F Y",
        locale: "fr",
        maxDate: new Date().fp_incr(365),
        disable: [
            function(date) { return (date.getDay() === 1); }, // Lundi
            function(date) { return (date.getDay() === 0); }  // Dimanche
        ],
        onChange: function(selectedDates, dateStr, instance) {
            updateCancelPreview();
        }
    });
    
    function updateCancelPreview() {
        const startDate = startPicker.selectedDates[0];
        const endDate = endPicker.selectedDates[0];
        const previewDiv = document.getElementById('cancel-preview');
        const previewContent = document.getElementById('cancel-content');
        
        if (startDate && endDate && startDate <= endDate) {
            const diffTime = Math.abs(endDate - startDate);
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)) + 1;
            
            // Count working days only (exclude weekends)
            let workingDays = 0;
            let currentDate = new Date(startDate);
            while (currentDate <= endDate) {
                const dayOfWeek = currentDate.getDay();
                if (dayOfWeek !== 0 && dayOfWeek !== 1) { // Not Sunday or Monday
                    workingDays++;
                }
                currentDate.setDate(currentDate.getDate() + 1);
            }
            
            previewContent.innerHTML = `
                <p><strong>Période d'annulation :</strong> du ${startDate.toLocaleDateString('fr-FR')} au ${endDate.toLocaleDateString('fr-FR')}</p>
                <p><strong>Durée totale :</strong> ${diffDays} jour${diffDays > 1 ? 's' : ''}</p>
                <p><strong>Jours ouvrables concernés :</strong> ${workingDays} jour${workingDays > 1 ? 's' : ''}</p>
                <p class="text-red-600 mt-2 font-medium"><strong>⚠️ Attention :</strong> Tous les congés existants sur cette période seront supprimés.</p>
            `;
            previewDiv.classList.remove('hidden');
        } else {
            previewDiv.classList.add('hidden');
        }
    }
});
</script>

<style>
.flatpickr-calendar {
    font-family: inherit;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    border: 1px solid #e5e7eb;
}

.flatpickr-day.today {
    background: #fef3f2;
    border-color: #dc2626;
    color: #dc2626;
}

.flatpickr-day.selected {
    background: #dc2626;
    border-color: #dc2626;
}

.flatpickr-day:hover {
    background: #fef2f2;
}
</style>
{% endblock %}