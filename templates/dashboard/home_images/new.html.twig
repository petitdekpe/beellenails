{% extends 'dashboard.html.twig' %}

{% block title %}Dashboard - Ajouter une image{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto">
        
        <!-- Main Content -->
        <div 
            <div class="px-4 py-6 sm:px-6 lg:px-8">
        
                <!-- Header intégré -->
                <div class="flex items-center justify-between mb-6">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">Ajouter une image</h1>
                        <p class="text-sm text-gray-600">
                            {% if home_image.type %}
                                Ajouter une image pour : <span class="font-semibold text-pink-600">{{ home_image.typeLabel }}</span>
                            {% else %}
                                Ajoutez une nouvelle image pour la page d'accueil
                            {% endif %}
                        </p>
                    </div>
                    <a href="{{ path('dashboard_home_images_index') }}" 
                       class="bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg inline-flex items-center">
                        <svg class="w-3 h-3 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5H1m0 0 4 4M1 5l4-4"/>
                        </svg>
                        Retour à la liste
                    </a>
                </div>

                <!-- Form -->
                <div class="bg-white rounded-lg shadow">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h2 class="text-lg font-medium text-gray-900">Informations de l'image</h2>
                    </div>
                    <div class="px-6 py-4">
            {{ form_start(form, {
                'attr': {
                    'class': 'space-y-6',
                    'enctype': 'multipart/form-data'
                }
            }) }}
            
            <div class="grid grid-cols-1 gap-6">
                
                <!-- Title -->
                <div>
                    {{ form_label(form.title, null, {
                        'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}
                    }) }}
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>

                <!-- Type -->
                <div>
                    {{ form_label(form.type, null, {
                        'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}
                    }) }}
                    {{ form_widget(form.type) }}
                    {{ form_errors(form.type) }}
                    <p class="mt-1 text-sm text-gray-500">Choisissez où cette image sera affichée sur la page d'accueil</p>
                </div>

                <!-- Position -->
                <div>
                    {{ form_label(form.position, null, {
                        'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}
                    }) }}
                    {{ form_widget(form.position) }}
                    {{ form_errors(form.position) }}
                    {{ form_help(form.position) }}
                </div>

                <!-- Image -->
                <div>
                    {{ form_label(form.image, null, {
                        'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}
                    }) }}
                    {{ form_widget(form.image) }}
                    {{ form_errors(form.image) }}
                </div>

                <!-- Description -->
                <div>
                    {{ form_label(form.description, null, {
                        'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}
                    }) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                    {{ form_help(form.description) }}
                </div>

                <!-- Is Active -->
                <div class="flex items-center">
                    {{ form_widget(form.isActive) }}
                    {{ form_label(form.isActive, null, {
                        'label_attr': {'class': 'ms-2 text-sm font-medium text-gray-900 dark:text-white'}
                    }) }}
                    {{ form_errors(form.isActive) }}
                </div>

            </div>

            <!-- Buttons -->
            <div class="flex items-center space-x-4 pt-6 border-t border-gray-200">
                <button type="submit" 
                        class="text-white bg-pink-700 hover:bg-pink-800 focus:ring-4 focus:ring-pink-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                    <svg class="w-4 h-4 inline me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 7.757v8.486M7.757 12h8.486M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                    </svg>
                    Ajouter l'image
                </button>
                
                <a href="{{ path('dashboard_home_images_index') }}" 
                   class="py-2.5 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-pink-700 focus:z-10 focus:ring-4 focus:ring-gray-200">
                    Annuler
                </a>
            </div>

            {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}