{% extends 'base.html.twig' %}

{% block title %}Dashboard - Images de l'accueil{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <div class="flex">
        <!-- Sidebar -->
        {% include '_sidebar.html.twig' %}
        
        <!-- Main Content -->
        <div class="flex-1 lg:ml-8">
            <div class="px-4 py-6 sm:px-6 lg:px-8">
                <!-- Header int√©gr√© -->
                <div class="flex justify-between items-center mb-6">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">Images de la page d'accueil</h1>
                        <p class="text-sm text-gray-600">G√©rez toutes les images affich√©es sur la page d'accueil</p>
                    </div>
                    <a href="{{ path('dashboard_home_images_new') }}" 
                       class="bg-pink-600 hover:bg-pink-700 text-white font-medium py-2 px-4 rounded-lg inline-flex items-center">
                        <svg class="w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 7.757v8.486M7.757 12h8.486M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                        </svg>
                        Ajouter une image
                    </a>
                </div>

                <!-- Flash messages -->
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="bg-white rounded-lg shadow mb-6">
                            <div class="px-6 py-4">
                                <div class="flex items-center p-4 text-sm text-{{ label == 'success' ? 'green' : 'red' }}-800 bg-{{ label == 'success' ? 'green' : 'red' }}-50 rounded-lg">
                                    <svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                        {% if label == 'success' %}
                                            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                                        {% else %}
                                            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM10 15a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm1-4a1 1 0 0 1-2 0V6a1 1 0 0 1 2 0v5Z"/>
                                        {% endif %}
                                    </svg>
                                    <span class="font-medium">{{ message }}</span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}

                <!-- Images par type -->
                <div class="grid grid-cols-1 gap-6">
                    {% for type, typeData in imagesByType %}
                        <div class="bg-white rounded-lg shadow">
                            <div class="px-6 py-4 border-b border-gray-200">
                                <div class="flex items-center justify-between">
                                    <h3 class="text-lg font-medium text-gray-900">
                                        üñºÔ∏è {{ typeData.label }}
                                        <span class="text-sm font-normal text-gray-500">({{ typeData.images|length }} images)</span>
                                    </h3>
                                    <a href="{{ path('dashboard_home_images_new') }}?type={{ type }}" 
                                       class="bg-pink-600 hover:bg-pink-700 text-white text-xs font-medium py-1 px-2 rounded inline-flex items-center">
                                        <svg class="w-3 h-3 me-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 7.757v8.486M7.757 12h8.486M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                                        </svg>
                                        Ajouter
                                    </a>
                                </div>
                            </div>
                            <div class="px-6 py-4">
                                {% if typeData.images|length > 0 %}
                                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                                        {% for image in typeData.images %}
                                            <div class="border border-gray-200 rounded-lg overflow-hidden">
                                                <!-- Image -->
                                                <div class="relative">
                                                    {% if image.imageName %}
                                                        <img class="w-full h-32 object-cover" src="{{ asset(vich_uploader_asset(image, 'image')) }}" alt="{{ image.title }}">
                                                    {% else %}
                                                        <div class="w-full h-32 bg-gray-200 flex items-center justify-center">
                                                            <svg class="w-8 h-8 text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
                                                                <path d="M18 0H2a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2Zm-5.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm4.376 10.481A1 1 0 0 1 16 15H4a1 1 0 0 1-.895-1.447l3.5-7A1 1 0 0 1 7.468 6a.965.965 0 0 1 .9.5l2.775 4.757 1.546-1.887a1 1 0 0 1 1.618.1l2.541 4a1 1 0 0 1 .028 1.011Z"/>
                                                            </svg>
                                                        </div>
                                                    {% endif %}
                                                    
                                                    <!-- Status badge -->
                                                    <div class="absolute top-2 right-2">
                                                        {% if image.isActive %}
                                                            <span class="bg-green-100 text-green-800 text-xs font-medium px-2 py-1 rounded">Active</span>
                                                        {% else %}
                                                            <span class="bg-red-100 text-red-800 text-xs font-medium px-2 py-1 rounded">Inactive</span>
                                                        {% endif %}
                                                    </div>

                                                    <!-- Position badge -->
                                                    {% if image.position is not null %}
                                                        <div class="absolute top-2 left-2">
                                                            <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2 py-1 rounded">#{{ image.position }}</span>
                                                        </div>
                                                    {% endif %}
                                                </div>

                                                <!-- Content -->
                                                <div class="p-3">
                                                    <h4 class="font-medium text-gray-900 mb-1">{{ image.title }}</h4>
                                                    {% if image.description %}
                                                        <p class="text-xs text-gray-600 mb-2">
                                                            {{ image.description|slice(0, 60) }}{% if image.description|length > 60 %}...{% endif %}
                                                        </p>
                                                    {% endif %}

                                                    <div class="flex items-center justify-between">
                                                        <div class="flex space-x-1">
                                                            <!-- Edit button -->
                                                            <a href="{{ path('dashboard_home_images_edit', {'id': image.id}) }}" 
                                                               class="inline-flex items-center px-2 py-1 text-xs font-medium text-white bg-blue-600 rounded hover:bg-blue-700">
                                                                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 18">
                                                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.109 17H1v-3.109L13.814 1.077a1.914 1.914 0 0 1 2.692 0l2.417 2.417a1.914 1.914 0 0 1 0 2.692L6.109 17Z"/>
                                                                </svg>
                                                            </a>

                                                            <!-- Toggle active -->
                                                            <form method="post" action="{{ path('dashboard_home_images_toggle', {'id': image.id}) }}" class="inline">
                                                                <button type="submit" 
                                                                        class="inline-flex items-center px-2 py-1 text-xs font-medium text-white {{ image.isActive ? 'bg-orange-600 hover:bg-orange-700' : 'bg-green-600 hover:bg-green-700' }} rounded">
                                                                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                                                        {% if image.isActive %}
                                                                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.933 13.909A4.357 4.357 0 0 1 3 12c0-1 4-6 9-6m7.6 3.8A5.068 5.068 0 0 1 21 12c0 1-3 6-9 6-.314 0-.62-.014-.918-.04M5 19 19 5m-4 7a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
                                                                        {% else %}
                                                                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
                                                                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7Z"/>
                                                                        {% endif %}
                                                                    </svg>
                                                                </button>
                                                            </form>
                                                        </div>

                                                        <!-- Delete button -->
                                                        <form method="post" action="{{ path('dashboard_home_images_delete', {'id': image.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette image ?');" class="inline">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
                                                            <button type="submit" 
                                                                    class="inline-flex items-center px-2 py-1 text-xs font-medium text-white bg-red-600 rounded hover:bg-red-700">
                                                                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 20">
                                                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h16M7 8v8m4-8v8M7 1h4a1 1 0 0 1 1 1v3H6V2a1 1 0 0 1 1-1ZM3 5h12v13a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V5Z"/>
                                                                </svg>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <div class="text-center py-8">
                                        <svg class="w-12 h-12 mx-auto text-gray-400 mb-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
                                            <path d="M18 0H2a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2Zm-5.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm4.376 10.481A1 1 0 0 1 16 15H4a1 1 0 0 1-.895-1.447l3.5-7A1 1 0 0 1 7.468 6a.965.965 0 0 1 .9.5l2.775 4.757 1.546-1.887a1 1 0 0 1 1.618.1l2.541 4a1 1 0 0 1 .028 1.011Z"/>
                                        </svg>
                                        <p class="text-gray-500 italic">Aucune image de type "{{ typeData.label }}"</p>
                                        <a href="{{ path('dashboard_home_images_new') }}?type={{ type }}" class="text-pink-600 hover:text-pink-800 font-medium">
                                            Ajouter la premi√®re image
                                        </a>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}