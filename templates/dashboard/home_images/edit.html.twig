{% extends 'dashboard.html.twig' %}

{% block title %}Dashboard - Modifier l'image{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto">
        
        <!-- Main Content -->
        <div 
            <div class="px-4 py-6 sm:px-6 lg:px-8">
        
                <!-- Header intégré -->
                <div class="flex items-center justify-between mb-6">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">Modifier l'image</h1>
                        <p class="text-sm text-gray-600">{{ home_image.title }} - {{ home_image.typeLabel }}</p>
                    </div>
                    <a href="{{ path('dashboard_home_images_index') }}" 
                       class="bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg inline-flex items-center">
                        <svg class="w-3 h-3 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5H1m0 0 4 4M1 5l4-4"/>
                        </svg>
                        Retour à la liste
                    </a>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    
                    <!-- Form -->
                    <div class="lg:col-span-2">
                        <div class="bg-white rounded-lg shadow">
                            <div class="px-6 py-4 border-b border-gray-200">
                                <h2 class="text-lg font-medium text-gray-900">Modifier les informations</h2>
                            </div>
                            <div class="px-6 py-4">
                {{ form_start(form, {
                    'attr': {
                        'class': 'space-y-6',
                        'enctype': 'multipart/form-data'
                    }
                }) }}
                
                <div class="grid grid-cols-1 gap-6">
                    
                    <!-- Title -->
                    <div>
                        {{ form_label(form.title, null, {
                            'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}
                        }) }}
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <!-- Type -->
                    <div>
                        {{ form_label(form.type, null, {
                            'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}
                        }) }}
                        {{ form_widget(form.type) }}
                        {{ form_errors(form.type) }}
                        <p class="mt-1 text-sm text-gray-500">Choisissez où cette image sera affichée sur la page d'accueil</p>
                    </div>

                    <!-- Position -->
                    <div>
                        {{ form_label(form.position, null, {
                            'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}
                        }) }}
                        {{ form_widget(form.position) }}
                        {{ form_errors(form.position) }}
                        {{ form_help(form.position) }}
                    </div>

                    <!-- Image -->
                    <div>
                        {{ form_label(form.image, null, {
                            'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}
                        }) }}
                        {{ form_widget(form.image) }}
                        {{ form_errors(form.image) }}
                    </div>

                    <!-- Description -->
                    <div>
                        {{ form_label(form.description, null, {
                            'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}
                        }) }}
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                        {{ form_help(form.description) }}
                    </div>

                    <!-- Is Active -->
                    <div class="flex items-center">
                        {{ form_widget(form.isActive) }}
                        {{ form_label(form.isActive, null, {
                            'label_attr': {'class': 'ms-2 text-sm font-medium text-gray-900 dark:text-white'}
                        }) }}
                        {{ form_errors(form.isActive) }}
                    </div>

                </div>

                <!-- Buttons -->
                <div class="flex items-center space-x-4 pt-6 border-t border-gray-200">
                    <button type="submit" 
                            class="text-white bg-pink-700 hover:bg-pink-800 focus:ring-4 focus:ring-pink-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                        <svg class="w-4 h-4 inline me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 18">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.109 17H1v-3.109L13.814 1.077a1.914 1.914 0 0 1 2.692 0l2.417 2.417a1.914 1.914 0 0 1 0 2.692L6.109 17Z"/>
                        </svg>
                        Modifier l'image
                    </button>
                    
                    <a href="{{ path('dashboard_home_images_index') }}" 
                       class="py-2.5 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-pink-700 focus:z-10 focus:ring-4 focus:ring-gray-200">
                        Annuler
                    </a>
                </div>

                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>

                    <!-- Preview -->
                    {% if home_image.imageName %}
                        <div class="lg:col-span-1">
                            <div class="bg-white rounded-lg shadow">
                        <div class="p-4">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Aperçu actuel</h3>
                            <img class="rounded-lg w-full h-48 object-cover" src="{{ asset(vich_uploader_asset(home_image, 'image')) }}" alt="{{ home_image.title }}">
                            
                            <div class="mt-3 space-y-2">
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-gray-500">Type:</span>
                                    <span class="text-sm font-medium">{{ home_image.typeLabel }}</span>
                                </div>
                                
                                {% if home_image.position %}
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-gray-500">Position:</span>
                                        <span class="text-sm font-medium">#{{ home_image.position }}</span>
                                    </div>
                                {% endif %}
                                
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-gray-500">Statut:</span>
                                    {% if home_image.isActive %}
                                        <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded">Active</span>
                                    {% else %}
                                        <span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded">Inactive</span>
                                    {% endif %}
                                </div>
                                
                                {% if home_image.updatedAt %}
                                    <div class="flex items-center justify-between">
                                        <span class="text-sm text-gray-500">Modifiée:</span>
                                        <span class="text-xs text-gray-400">{{ home_image.updatedAt|date('d/m/Y H:i') }}</span>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}