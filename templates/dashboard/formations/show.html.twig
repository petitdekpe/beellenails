<!-- Modal inscription utilisateur -->
<div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden" id="enrollUserModal">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-medium text-gray-900">Inscrire un utilisateur</h3>
                <button type="button" class="text-gray-400 hover:text-gray-600" onclick="closeModal('enrollUserModal')">
                    <span class="sr-only">Fermer</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <form id="enrollUserForm">
                <div class="space-y-4">
                    <div>
                        <label for="userSelect" class="block text-sm font-medium text-gray-700">Utilisateur</label>
                        <select class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" id="userSelect" name="userId" required>
                            <option value="">S√©lectionner un utilisateur...</option>
                            <!-- Options charg√©es via AJAX -->
                        </select>
                    </div>
                    
                    <div>
                        <label for="accessType" class="block text-sm font-medium text-gray-700">Type d'acc√®s</label>
                        <select class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" id="accessType" name="accessType">
                            <option value="30_days">30 jours</option>
                            <option value="60_days">60 jours</option>
                            <option value="90_days">90 jours</option>
                            <option value="lifetime">Acc√®s √† vie</option>
                        </select>
                    </div>
                </div>
                <div class="mt-6 flex justify-end space-x-3">
                    <button type="button" class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" onclick="closeModal('enrollUserModal')">Annuler</button>
                    <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">Inscrire</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Graphique de compl√©tion
    const ctx = document.getElementById('completionChart')?.getContext('2d');
    if (ctx) {
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Actives', 'Termin√©es', 'Expir√©es'],
                datasets: [{
                    data: [{{ stats.activeEnrollments }}, {{ stats.completedEnrollments }}, {{ stats.expiredEnrollments }}],
                    backgroundColor: ['#0891b2', '#059669', '#d97706']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    }
    
    // Toggle statut formation
    const toggleButton = document.querySelector('.toggle-status');
    if (toggleButton) {
        toggleButton.addEventListener('click', function() {
            const formationId = this.dataset.formationId;
            
            fetch(`/dashboard/formations/${formationId}/toggle-status`, {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
            });
        });
    }
});

function closeModal(modalId) {
    document.getElementById(modalId).classList.add('hidden');
}

function copyFormationLink() {
    const url = "{{ url('app_formation_show', {id: formation.id}) }}";
    navigator.clipboard.writeText(url).then(function() {
        showAlert('success', 'Lien copi√© dans le presse-papiers !');
    }).catch(function() {
        showAlert('error', 'Erreur lors de la copie du lien');
    });
}

function showAlert(type, message) {
    const bgClass = type === 'success' ? 'bg-green-100 border-green-400 text-green-700' : 'bg-red-100 border-red-400 text-red-700';
    const alertHtml = `
        <div class="${bgClass} px-4 py-3 rounded border mb-4 relative" role="alert">
            <span class="block sm:inline">${message}</span>
            <span class="absolute top-0 bottom-0 right-0 px-4 py-3 cursor-pointer" onclick="this.parentElement.remove()">
                <svg class="fill-current h-6 w-6" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                    <title>Close</title>
                    <path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/>
                </svg>
            </span>
        </div>
    `;
    
    const container = document.querySelector('.space-y-6');
    container.insertAdjacentHTML('afterbegin', alertHtml);
    
    setTimeout(function() {
        const alert = container.querySelector('[role="alert"]');
        if (alert) {
            alert.remove();
        }
    }, 5000);
}
</script>

