                        {% if formation.imageName %}
                        <div>
                            <img src="{{ vich_uploader_asset(formation, 'image') }}" 
                                 alt="{{ formation.Nom }}" class="w-full rounded-lg">
                        </div>
                        {% endif %}
                        <div class="{% if formation.imageName %}md:col-span-2{% endif %}">
                            <dl class="space-y-4">
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Nom :</dt>
