                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ressources -->
            {% if formation.resources is not empty %}
            <div class="bg-white rounded-lg shadow-sm border mt-6">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Ressources ({{ formation.resources|length }})</h2>
                </div>
                <div class="p-6">
                    {% for resource in formation.resources %}
                    <div class="flex items-center mb-3">
                        <span class="mr-3 text-gray-500">{{ resource.typeIcon }}</span>
                        <div class="flex-1">
