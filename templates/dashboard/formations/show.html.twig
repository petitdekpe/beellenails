                        <div class="border border-gray-200 p-4 rounded-lg bg-gray-50">
                            {{ formation.Description|nl2br }}
                        </div>
                    </div>
                    {% endif %}

                    {% if formation.Objectif %}
                    <div class="mt-6">
                        <h3 class="text-sm font-medium text-gray-900 mb-2">Objectifs p√©dagogiques :</h3>
                        <div class="border border-gray-200 p-4 rounded-lg bg-gray-50">
                            {{ formation.Objectif|nl2br }}
                        </div>
                    </div>
                    {% endif %}
