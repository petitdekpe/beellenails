                    <div class="text-2xl font-bold text-gray-900">{{ stats.revenue }} F CFA</div>
                </div>
                <div class="text-gray-400">
                    <i class="fas fa-coins fa-2x"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Informations de la formation -->
