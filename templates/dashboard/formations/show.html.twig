                                        {% if module.description %}
                                            <p class="text-gray-600 mb-2">{{ module.description|slice(0, 100) }}...</p>
                                        {% endif %}
                                        <div class="flex items-center space-x-4 text-sm text-gray-500">
                                            {% if module.duration %}‚è±Ô∏è {{ module.formattedDuration }}{% endif %}
                                            {% if module.youtubeUrl %}üìπ Vid√©o{% endif %}
                                        </div>
                                    </div>
                                    <div class="flex space-x-2 ml-4">
                                        <button class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                            <i class="fas fa-edit mr-1"></i> Modifier
                                        </button>
                                        <button class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-red-600 bg-white hover:bg-red-50">
                                            <i class="fas fa-trash mr-1"></i> Supprimer
                                        </button>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-12">
                            <div class="mx-auto h-24 w-24 text-gray-300 mb-4">
                                <i class="fas fa-list text-6xl"></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun module cr√©√©</h3>
                            <p class="text-gray-500 mb-6">Cette formation n'a pas encore de modules.</p>
                            <a href="{{ path('app_dashboard_formation_module_new', {id: formation.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                                <i class="fas fa-plus mr-2"></i>Cr√©er le premier module
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div>
            <!-- Actions rapides -->
            <div class="bg-white rounded-lg shadow-sm border">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Actions Rapides</h2>
                </div>
                <div class="p-6">
                    <div class="space-y-3">
                        <button class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white {{ formation.isActive ? 'bg-yellow-600 hover:bg-yellow-700' : 'bg-green-600 hover:bg-green-700' }} toggle-status" 
                                data-formation-id="{{ formation.id }}">
                            <i class="fas fa-{{ formation.isActive ? 'pause' : 'play' }} mr-2"></i>
                            {{ formation.isActive ? 'D√©sactiver' : 'Activer' }} la formation
                        </button>
                        
                        <a href="{{ path('app_formation_show', {id: formation.id}) }}" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" target="_blank">
                            <i class="fas fa-external-link-alt mr-2"></i> Voir c√¥t√© client
                        </a>
                        
                        <button class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" onclick="copyFormationLink()">
