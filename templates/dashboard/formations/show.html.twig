                <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                    <h2 class="text-lg font-semibold text-gray-900">Modules ({{ formation.modules|length }})</h2>
                    <a href="{{ path('app_dashboard_formation_module_new', {id: formation.id}) }}" class="inline-flex items-center px-3 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
                        <i class="fas fa-plus mr-2"></i> Nouveau Module
                    </a>
                </div>
                <div class="p-6">
                    {% if formation.modules is not empty %}
                        <div class="space-y-4">
                            {% for module in formation.modules %}
