{% extends 'dashboard.html.twig' %}

{% block title %}Gestion des Formations{% endblock %}

{% block content %}
<div class="p-4 pt-16">
    <div class="max-w-7xl mx-auto">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-900">üìö Gestion des Formations</h1>
            <div class="flex space-x-3">
                <a href="{{ path('app_dashboard_analytics') }}" class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200">
                    <i class="fas fa-chart-line mr-2"></i>Voir Analytics
                </a>
                <a href="{{ path('app_dashboard_formation_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200">
                    <i class="fas fa-plus mr-2"></i>Nouvelle Formation
                </a>
            </div>
        </div>

        <!-- Statistiques rapides -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
            <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-blue-500">
                <div class="flex items-center">
                    <div class="flex-1">
                        <p class="text-xs font-semibold text-blue-600 uppercase mb-1">Total Formations</p>
                        <p class="text-2xl font-bold text-gray-900">{{ stats.total }}</p>
                    </div>
                    <div class="ml-4">
                        <i class="fas fa-graduation-cap text-2xl text-gray-400"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-green-500">
                <div class="flex items-center">
                    <div class="flex-1">
                        <p class="text-xs font-semibold text-green-600 uppercase mb-1">Formations Actives</p>
                        <p class="text-2xl font-bold text-gray-900">{{ stats.active }}</p>
                    </div>
                    <div class="ml-4">
                        <i class="fas fa-check-circle text-2xl text-gray-400"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-cyan-500">
                <div class="flex items-center">
                    <div class="flex-1">
                        <p class="text-xs font-semibold text-cyan-600 uppercase mb-1">Total Inscriptions</p>
                        <p class="text-2xl font-bold text-gray-900">{{ stats.totalEnrollments }}</p>
                    </div>
                    <div class="ml-4">
                        <i class="fas fa-users text-2xl text-gray-400"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-yellow-500">
                <div class="flex items-center">
                    <div class="flex-1">
                        <p class="text-xs font-semibold text-yellow-600 uppercase mb-1">Inscriptions Actives</p>
                        <p class="text-2xl font-bold text-gray-900">{{ stats.activeEnrollments }}</p>
                    </div>
                    <div class="ml-4">
                        <i class="fas fa-user-clock text-2xl text-gray-400"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filtres -->
        <div class="bg-white p-6 rounded-lg shadow-md mb-6">
            <h3 class="text-lg font-semibold text-blue-600 mb-4">Filtres</h3>
            <form method="GET" action="{{ path('app_dashboard_formations_index') }}">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label for="search" class="block text-sm font-medium text-gray-700 mb-2">Recherche</label>
                        <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                               id="search" name="search" value="{{ search }}" placeholder="Nom de la formation...">
                    </div>
                    <div>
                        <label for="status" class="block text-sm font-medium text-gray-700 mb-2">Statut</label>
                        <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                                id="status" name="status">
                            <option value="all" {{ status == 'all' ? 'selected' : '' }}>Tous les statuts</option>
                            <option value="active" {{ status == 'active' ? 'selected' : '' }}>Actives</option>
                            <option value="inactive" {{ status == 'inactive' ? 'selected' : '' }}>Inactives</option>
                        </select>
                    </div>
                    <div>
                        <label for="is_free" class="block text-sm font-medium text-gray-700 mb-2">Type</label>
                        <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                                id="is_free" name="is_free">
                            <option value="all" {{ is_free == 'all' ? 'selected' : '' }}>Tous les types</option>
                            <option value="true" {{ is_free == 'true' ? 'selected' : '' }}>Gratuites</option>
                            <option value="false" {{ is_free == 'false' ? 'selected' : '' }}>Payantes</option>
                        </select>
                    </div>
                    <div class="flex items-end">
                        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200">
                            <i class="fas fa-search mr-2"></i>Filtrer
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Liste des formations -->
        <div class="bg-white rounded-lg shadow-md mb-6">
            <div class="p-6 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-blue-600">Formations ({{ formations.getTotalItemCount }})</h3>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Formation</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prix</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Inscriptions</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cr√©√©e le</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for formation in formations %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    {% if formation.imageName %}
                                        <img src="{{ vich_uploader_asset(formation, 'image') }}" 
                                             alt="{{ formation.Nom }}" class="w-12 h-12 rounded-lg object-cover mr-4">
                                    {% else %}
                                        <div class="w-12 h-12 bg-gray-300 rounded-lg flex items-center justify-center mr-4">
                                            <i class="fas fa-image text-white"></i>
                                        </div>
                                    {% endif %}
                                    <div>
                                        <h6 class="text-sm font-medium text-gray-900">{{ formation.Nom }}</h6>
                                        <p class="text-sm text-gray-500">{{ formation.level|default('Non d√©fini') }}</p>
                                        <div class="mt-1">
                                            <a href="{{ path('app_dashboard_formation_edit', {id: formation.id}) }}" 
                                               class="inline-flex items-center text-xs text-blue-600 hover:text-blue-800 font-medium">
                                                <i class="fas fa-edit mr-1"></i> Modifier rapidement
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if formation.isFree %}
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Gratuite</span>
                                {% else %}
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Payante</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if formation.isFree %}
                                    <span class="text-green-600 font-medium">Gratuit</span>
                                {% else %}
                                    <span class="font-medium text-gray-900">{{ formation.Cout }} F CFA</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">{{ formation.enrollmentCount|default(0) }}</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <label class="inline-flex items-center">
                                    <input type="checkbox" class="sr-only formation-status" 
                                           id="status-{{ formation.id }}" 
                                           data-formation-id="{{ formation.id }}"
                                           {{ formation.isActive ? 'checked' : '' }}>
                                    <div class="relative">
                                        <div class="block bg-gray-600 w-14 h-8 rounded-full"></div>
                                        <div class="dot absolute left-1 top-1 bg-white w-6 h-6 rounded-full transition"></div>
                                    </div>
                                    <span class="ml-3 text-sm {{ formation.isActive ? 'text-green-800' : 'text-gray-500' }}">
                                        {{ formation.isActive ? 'Active' : 'Inactive' }}
                                    </span>
                                </label>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ formation.createdAt|date('d/m/Y H:i') }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <div class="flex space-x-2">
                                    <a href="{{ path('app_dashboard_formation_show', {id: formation.id}) }}" 
                                       class="inline-flex items-center px-2 py-1 text-xs font-medium text-blue-600 bg-blue-100 rounded hover:bg-blue-200 transition-colors" 
                                       title="Voir les d√©tails">
                                        <i class="fas fa-eye mr-1"></i> Voir
                                    </a>
                                    <a href="{{ path('app_dashboard_formation_edit', {id: formation.id}) }}" 
                                       class="inline-flex items-center px-2 py-1 text-xs font-medium text-yellow-600 bg-yellow-100 rounded hover:bg-yellow-200 transition-colors" 
                                       title="Modifier la formation">
                                        <i class="fas fa-edit mr-1"></i> Modifier
                                    </a>
                                    <a href="{{ path('app_dashboard_formation_modules', {id: formation.id}) }}" 
                                       class="inline-flex items-center px-2 py-1 text-xs font-medium text-purple-600 bg-purple-100 rounded hover:bg-purple-200 transition-colors" 
                                       title="G√©rer les modules">
                                        <i class="fas fa-list mr-1"></i> Modules
                                    </a>
                                    <button type="button" class="inline-flex items-center px-2 py-1 text-xs font-medium text-red-600 bg-red-100 rounded hover:bg-red-200 transition-colors delete-formation" 
                                            data-formation-id="{{ formation.id }}" 
                                            data-formation-name="{{ formation.Nom }}"
                                            data-csrf-token="{{ csrf_token('delete' ~ formation.id) }}" 
                                            title="Supprimer la formation">
                                        <i class="fas fa-trash mr-1"></i> Supprimer
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                                <i class="fas fa-graduation-cap text-4xl mb-4 block text-gray-300"></i>
                                Aucune formation trouv√©e
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if formations.pageCount > 1 %}
            <div class="p-6 border-t border-gray-200 flex justify-center">
                {{ knp_pagination_render(formations) }}
            </div>
            {% endif %}
        </div>

        <!-- Liens rapides -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white p-6 rounded-lg shadow-md text-center">
                <i class="fas fa-chart-line text-4xl text-blue-600 mb-4"></i>
                <h5 class="text-lg font-semibold text-gray-900 mb-2">Analyses & Statistiques</h5>
                <p class="text-gray-600 mb-4">Consultez les performances d√©taill√©es de vos formations</p>
                <a href="{{ path('app_dashboard_analytics') }}" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200">
                    Voir les analyses
                </a>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md text-center">
                <i class="fas fa-users text-4xl text-green-600 mb-4"></i>
                <h5 class="text-lg font-semibold text-gray-900 mb-2">Gestion des Utilisateurs</h5>
                <p class="text-gray-600 mb-4">G√©rez les acc√®s et inscriptions des utilisateurs</p>
                <a href="{{ path('app_dashboard_user') }}" class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200">
                    G√©rer les utilisateurs
                </a>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md text-center">
                <i class="fas fa-credit-card text-4xl text-cyan-600 mb-4"></i>
                <h5 class="text-lg font-semibold text-gray-900 mb-2">Transactions</h5>
                <p class="text-gray-600 mb-4">Suivez les paiements et transactions</p>
                <a href="{{ path('app_dashboard_transactions') }}" class="bg-cyan-600 hover:bg-cyan-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200">
                    Voir les transactions
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div id="deleteModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3 text-center">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
                <i class="fas fa-exclamation-triangle text-red-600"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mt-5">Confirmer la suppression</h3>
            <div class="mt-2 px-7 py-3">
                <p class="text-sm text-gray-500">
                    √ätes-vous s√ªr de vouloir supprimer la formation <strong id="formation-name"></strong> ?
                </p>
                <div class="mt-4 p-3 bg-yellow-50 rounded-md">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-triangle text-yellow-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-yellow-700">
                                Cette action est irr√©versible et supprimera √©galement tous les modules associ√©s.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="items-center px-4 py-3">
                <button id="cancel-delete" class="px-4 py-2 bg-gray-500 text-white text-base font-medium rounded-md w-24 mr-2 hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-300">
                    Annuler
                </button>
                <form id="delete-form" method="POST" style="display: inline;">
                    <input type="hidden" name="_token" id="delete-token" value="">
                    <button type="submit" class="px-4 py-2 bg-red-500 text-white text-base font-medium rounded-md w-24 hover:bg-red-400 focus:outline-none focus:ring-2 focus:ring-red-300">
                        Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion du changement de statut avec switch toggle
    document.querySelectorAll('.formation-status').forEach(function(checkbox) {
        const toggleContainer = checkbox.parentNode;
        const dot = toggleContainer.querySelector('.dot');
        const statusText = toggleContainer.querySelector('span');
        
        // Initialiser l'√©tat visuel
        updateToggleVisual(checkbox, dot, statusText);
        
        checkbox.addEventListener('change', function() {
            const formationId = this.dataset.formationId;
            const isActive = this.checked;
            
            fetch(`/dashboard/formations/${formationId}/toggle-status`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    updateToggleVisual(this, dot, statusText);
                    showAlert('success', data.message);
                } else {
                    this.checked = !isActive;
                    updateToggleVisual(this, dot, statusText);
                    showAlert('error', 'Erreur lors de la mise √† jour du statut');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                this.checked = !isActive;
                updateToggleVisual(this, dot, statusText);
                showAlert('error', 'Erreur lors de la mise √† jour du statut');
            });
        });
    });
    
    // Fonction pour mettre √† jour l'apparence du toggle
    function updateToggleVisual(checkbox, dot, statusText) {
        const bg = checkbox.parentNode.querySelector('.block');
        if (checkbox.checked) {
            bg.classList.remove('bg-gray-600');
            bg.classList.add('bg-green-500');
            dot.style.transform = 'translateX(24px)';
            statusText.textContent = 'Active';
            statusText.classList.remove('text-gray-500');
            statusText.classList.add('text-green-800');
        } else {
            bg.classList.remove('bg-green-500');
            bg.classList.add('bg-gray-600');
            dot.style.transform = 'translateX(0px)';
            statusText.textContent = 'Inactive';
            statusText.classList.remove('text-green-800');
            statusText.classList.add('text-gray-500');
        }
    }
    
    // Gestion de la suppression
    document.querySelectorAll('.delete-formation').forEach(function(button) {
        button.addEventListener('click', function() {
            const formationId = this.dataset.formationId;
            const formationName = this.dataset.formationName;
            const csrfToken = this.dataset.csrfToken;
            
            document.getElementById('formation-name').textContent = formationName;
            document.getElementById('delete-form').action = `/dashboard/formations/${formationId}/delete`;
            document.getElementById('delete-token').value = csrfToken;
            
            document.getElementById('deleteModal').classList.remove('hidden');
        });
    });
    
    // Fermer la modal
    document.getElementById('cancel-delete').addEventListener('click', function() {
        document.getElementById('deleteModal').classList.add('hidden');
    });
    
    // Fermer la modal en cliquant √† l'ext√©rieur
    document.getElementById('deleteModal').addEventListener('click', function(e) {
        if (e.target === this) {
            this.classList.add('hidden');
        }
    });
});

function showAlert(type, message) {
    const alertClass = type === 'success' ? 'bg-green-100 border-green-500 text-green-700' : 'bg-red-100 border-red-500 text-red-700';
    const alertHtml = `
        <div class="border-l-4 p-4 mb-4 ${alertClass}" role="alert">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm">${message}</p>
                </div>
                <div class="ml-auto pl-3">
                    <button class="inline-flex text-gray-400 hover:text-gray-600" onclick="this.parentElement.parentElement.parentElement.remove()">
                        <span class="sr-only">Dismiss</span>
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        </div>
    `;
    
    // Ins√©rer l'alerte en haut de la page
    const container = document.querySelector('.p-4.pt-16 .max-w-7xl');
    container.insertAdjacentHTML('afterbegin', alertHtml);
    
    // Auto-supprimer apr√®s 5 secondes
    setTimeout(function() {
        const alert = container.querySelector('[role="alert"]');
        if (alert) {
            alert.remove();
        }
    }, 5000);
}
</script>
{% endblock %}