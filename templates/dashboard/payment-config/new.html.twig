{% extends 'dashboard.html.twig' %}

{% block title %}Nouvelle configuration de paiement{% endblock %}

{% block content %}
<div class="p-6">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Nouvelle configuration de paiement</h1>
            <p class="text-gray-600 mt-1">Créez une nouvelle configuration pour vos paiements</p>
        </div>
        <a href="{{ path('app_dashboard_payment_config_index') }}" 
           class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Retour à la liste
        </a>
    </div>

    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-4 p-4 rounded-lg {% if type == 'success' %}bg-green-50 text-green-800 border border-green-200{% elseif type == 'error' %}bg-red-50 text-red-800 border border-red-200{% else %}bg-blue-50 text-blue-800 border border-blue-200{% endif %}">
                <div class="flex">
                    <div class="ml-3">
                        <p class="text-sm">{{ message }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-5 border-b border-gray-200">
                <div class="flex items-center">
                    <div class="w-10 h-10 bg-pink-100 rounded-lg flex items-center justify-center mr-4">
                        <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-lg font-semibold text-gray-900">Créer une nouvelle configuration</h2>
                        <p class="text-sm text-gray-600">Définissez les paramètres de votre nouvelle configuration de paiement</p>
                    </div>
                </div>
            </div>
            
            <div class="px-6 py-6">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        {{ form_label(form.type, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.type, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500'}}) }}
                        {{ form_errors(form.type) }}
                        <p class="text-xs text-gray-500">Le type détermine l'usage de cette configuration</p>
                    </div>
                    
                    <div class="space-y-2">
                        {{ form_label(form.currency, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.currency, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500'}}) }}
                        {{ form_errors(form.currency) }}
                    </div>
                </div>

                <div class="space-y-2">
                    {{ form_label(form.label, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.label, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500'}}) }}
                    {{ form_errors(form.label) }}
                    <p class="text-xs text-gray-500">Nom affiché pour cette configuration</p>
                </div>

                <div class="space-y-2">
                    {{ form_label(form.amount, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    <div class="mt-1 relative rounded-md shadow-sm">
                        {{ form_widget(form.amount, {'attr': {'class': 'block w-full pl-3 pr-12 rounded-md border-gray-300 focus:border-pink-500 focus:ring-pink-500'}}) }}
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                            <span class="text-gray-500 sm:text-sm">XOF</span>
                        </div>
                    </div>
                    {{ form_errors(form.amount) }}
                    <p class="text-xs text-gray-500">Montant en Franc CFA (XOF)</p>
                </div>

                <div class="space-y-2">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500'}}) }}
                    {{ form_errors(form.description) }}
                    <p class="text-xs text-gray-500">Description optionnelle de cette configuration</p>
                </div>

                <div class="flex items-center space-x-3">
                    <div class="flex items-center h-5">
                        {{ form_widget(form.isActive, {'attr': {'class': 'h-4 w-4 text-pink-600 focus:ring-pink-500 border-gray-300 rounded'}}) }}
                    </div>
                    <div class="text-sm">
                        {{ form_label(form.isActive, null, {'label_attr': {'class': 'font-medium text-gray-700'}}) }}
                        <p class="text-gray-500">La configuration sera disponible immédiatement</p>
                    </div>
                    {{ form_errors(form.isActive) }}
                </div>

                <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
                    <a href="{{ path('app_dashboard_payment_config_index') }}" 
                       class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                        Annuler
                    </a>
                    <button type="submit" 
                            class="inline-flex items-center px-4 py-2 bg-pink-600 hover:bg-pink-700 text-white text-sm font-medium rounded-lg transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Créer la configuration
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}