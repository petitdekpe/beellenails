{% extends 'base.html.twig' %}

{% block title %}CategoryPrestation index{% endblock %}

{% block body %}
    <div class="m-20">
    
    <div class="mt-10 mx-auto gap-4 flex flex-wrap">
    {% for category_prestation in category_prestations %}
            <div class="mx-auto my-10 max-w-sm bg-white border border-gray-200 rounded-lg shadow">
                <a href="#">
                <img src="{{ asset('assets/' ~ vich_uploader_asset(CategoryPrestation, 'image')) }}" alt="Image" style="height: 300px; object-fit: cover; width: 100%">
                <div class="p-5">
                    <a href="#">
                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">{{ category_prestation.NomCategory }}</h5>
                    </a>
                </div>
            </div>
    {% else %}
        <p class="font-normal text-gray-700 ">Aucune prestation</p>
    {% endfor %}
    </div>

</div>

    <a href="{{ path('app_category_prestation_new') }}">Create new</a>
{% endblock %}
