{% extends 'base.html.twig' %}

{% block title %}Paiement lancé
{% endblock %}

{% block javascripts %}
	<script>
		const reference = "{{ reference }}";
const maxAttempts = 6; // Réduit de 30 à 6 (1 minute au lieu de 5 minutes)
let attempts = 0;

const checkStatus = () => {
attempts++;

fetch(`/payment/feexpay/status/${reference}?attempt=${attempts}`).then(response => response.json()).then(data => {
const status = data.status;

if (status === 'successful') {
window.location.href = `/rendezvous/payment/done/${reference}`;
} else if (status === 'failed' || status === 'canceled') {
window.location.href = `/rendezvous/payment/error/${reference}`;
} else { // Si toujours pending après le temps limite, on redirige vers une page d'attente
if (attempts >= maxAttempts) { // Au lieu d'une erreur, on redirige vers une page d'attente
window.location.href = `/rendezvous/payment/pending/${reference}`;
} else {
setTimeout(checkStatus, 10000); // Vérification toutes les 10 secondes
}
}
}).catch(error => {
console.error("Erreur lors de la vérification du statut :", error);
// En cas d'erreur réseau, on continue d'attendre (le webhook fait le travail)
if (attempts < maxAttempts) {
setTimeout(checkStatus, 10000);
} else {
window.location.href = `/rendezvous/payment/pending/${reference}`;
}
});
};

// Démarrer la vérification après 15 secondes (laisse plus de temps au webhook)
setTimeout(checkStatus, 15000);

// Message informatif après 30 secondes
setTimeout(() => {
const infoDiv = document.getElementById('webhook-info');
if (infoDiv) {
infoDiv.style.display = 'block';
}
}, 30000);
	</script>
{% endblock %}

{% block body %}
