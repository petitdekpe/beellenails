<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('⚠️ Êtes-vous sûr de vouloir supprimer ce client ? Cette action est irréversible.');" class="inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button type="submit" class="inline-flex items-center px-3 py-2 text-sm font-medium text-red-700 bg-red-50 border border-red-300 rounded-lg hover:bg-red-100 focus:ring-4 focus:outline-none focus:ring-red-300">
        🗑️ Supprimer
    </button>
</form>
