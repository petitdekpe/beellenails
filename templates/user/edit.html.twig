
{% extends 'base.html.twig' %}

{% block title %}Dashboard - Modifier un client{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <div class="flex">
        <!-- Sidebar -->
        {% include '_sidebar.html.twig' %}
        
        <!-- Main Content -->
        <div class="flex-1 lg:ml-8">
            <div class="px-4 py-6 sm:px-6 lg:px-8">
                <!-- Header -->
                <div class="mb-6">
                    <h1 class="text-2xl font-bold text-gray-900">‚úèÔ∏è Modifier un client</h1>
                    <p class="text-sm text-gray-600">Modifiez les informations du profil client</p>
                </div>

                <!-- Navigation -->
                <nav class="mb-6" aria-label="Breadcrumb">
                    <ol class="flex items-center space-x-2 text-sm">
                        <li><a href="{{ path('app_dashboard') }}" class="text-gray-500 hover:text-gray-700">Dashboard</a></li>
                        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/></svg>
                        <li><a href="{{ path('app_dashboard_user') }}" class="text-gray-500 hover:text-gray-700">Clients</a></li>
                        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/></svg>
                        <li class="text-gray-900 font-medium">Modifier</li>
                    </ol>
                </nav>

                <!-- Flash Messages -->
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="mb-6 p-4 text-sm rounded-lg {% if type == 'success' %}text-green-800 bg-green-50 border border-green-200{% elseif type == 'warning' %}text-yellow-800 bg-yellow-50 border border-yellow-200{% else %}text-red-800 bg-red-50 border border-red-200{% endif %}">
                            <div class="flex items-center">
                                {% if type == 'success' %}
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                {% elseif type == 'warning' %}
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                    </svg>
                                {% else %}
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                                    </svg>
                                {% endif %}
                                {{ message }}
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}

                <!-- Main Grid -->
                <div class="grid grid-cols-1 xl:grid-cols-3 gap-6">
                    
                    <!-- Informations actuelles du client -->
                    <div class="xl:col-span-1">
                        <div class="bg-white rounded-lg shadow">
                            <div class="px-6 py-4 border-b border-gray-200">
                                <h2 class="text-lg font-medium text-gray-900">üë§ Informations actuelles</h2>
                                <p class="text-sm text-gray-500 mt-1">Profil du client</p>
                            </div>
                            <div class="px-6 py-6">
                                <div class="space-y-4">
                                    <div class="flex items-center p-3 bg-blue-50 rounded-lg border border-blue-200">
                                        <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                                            <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                                            </svg>
                                        </div>
                                        <div>
                                            <p class="text-sm font-medium text-blue-900">Email</p>
                                            <p class="text-sm text-blue-700">{{ user.email }}</p>
                                        </div>
                                    </div>

                                    <div class="flex items-center p-3 bg-green-50 rounded-lg border border-green-200">
                                        <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-3">
                                            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                                            </svg>
                                        </div>
                                        <div>
                                            <p class="text-sm font-medium text-green-900">Nom complet</p>
                                            <p class="text-sm text-green-700">{{ user.nom }} {{ user.prenom }}</p>
                                        </div>
                                    </div>

                                    <div class="flex items-center p-3 bg-purple-50 rounded-lg border border-purple-200">
                                        <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                                            <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                                            </svg>
                                        </div>
                                        <div>
                                            <p class="text-sm font-medium text-purple-900">T√©l√©phone</p>
                                            <p class="text-sm text-purple-700">{{ user.phone|default('Non renseign√©') }}</p>
                                        </div>
                                    </div>

                                    {% if user.birthday %}
                                    <div class="flex items-center p-3 bg-amber-50 rounded-lg border border-amber-200">
                                        <div class="w-10 h-10 bg-amber-100 rounded-full flex items-center justify-center mr-3">
                                            <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                                            </svg>
                                        </div>
                                        <div>
                                            <p class="text-sm font-medium text-amber-900">Date de naissance</p>
                                            <p class="text-sm text-amber-700">{{ user.birthday|date('d/m/Y') }}</p>
                                        </div>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <!-- Actions rapides -->
                        <div class="mt-6 bg-white rounded-lg shadow">
                            <div class="px-6 py-4 border-b border-gray-200">
                                <h3 class="text-lg font-medium text-gray-900">‚ö° Actions rapides</h3>
                            </div>
                            <div class="px-6 py-4">
                                <div class="space-y-3">
                                    <a href="{{ path('app_dashboard_user') }}" class="flex items-center p-3 text-sm text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                                        <svg class="w-5 h-5 text-gray-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd"/>
                                        </svg>
                                        Voir tous les clients
                                    </a>
                                    <a href="{{ path('app_rendezvous_new') }}" class="flex items-center p-3 text-sm text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                                        <svg class="w-5 h-5 text-gray-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                                        </svg>
                                        Cr√©er un rendez-vous
                                    </a>
                                    {% if user.email %}
                                    <a href="mailto:{{ user.email }}" class="flex items-center p-3 text-sm text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                                        <svg class="w-5 h-5 text-gray-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                                        </svg>
                                        Envoyer un email
                                    </a>
                                    {% endif %}
                                    {% if user.phone %}
                                    <a href="tel:{{ user.phone }}" class="flex items-center p-3 text-sm text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                                        <svg class="w-5 h-5 text-gray-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                                        </svg>
                                        Appeler {{ user.phone }}
                                    </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Formulaire de modification -->
                    <div class="xl:col-span-2">
                        <div class="bg-white rounded-lg shadow">
                            <div class="px-6 py-4 border-b border-gray-200">
                                <h2 class="text-lg font-medium text-gray-900">üìù Modifier les informations</h2>
                                <p class="text-sm text-gray-500 mt-1">Modifiez les donn√©es du profil client</p>
                            </div>
                            <div class="px-6 py-6">
                                {{ include('user/_form_edit.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

